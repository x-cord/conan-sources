Dialogue: 0,0:00:01.41,0:00:03.44,DefaultSingle-J,,0,0,0,,		俺達少年探偵団と蘭は
Dialogue: 0,0:00:03.81,0:00:07.24,DefaultSingle-J,,0,0,0,,		博士の知り合いが経営しているスタジオの見学に来た
Dialogue: 0,0:00:12.68,0:00:14.25,DefaultSingle-J,,0,0,0,,		青銅の巨人
Dialogue: 0,0:00:14.62,0:00:15.82,DefaultSingle-J,,0,0,0,,		タロス
Dialogue: 0,0:00:17.90,0:00:20.47,DefaultSingle-J,,0,0,0,,		近くで見ても青銅製みたいね
Dialogue: 0,0:00:20.75,0:00:22.21,DefaultSingle-J,,0,0,0,,		すっごく重そう
Dialogue: 0,0:00:22.50,0:00:26.19,DefaultSingle-J,,0,0,0,,		早く完成した巨人タロス見てみたいですね
Dialogue: 0,0:00:26.19,0:00:27.28,DefaultSingle-J,,0,0,0,,		スッゲー
Dialogue: 0,0:00:27.28,0:00:28.63,DefaultSingle-J,,0,0,0,,		わくわくすんな
Dialogue: 0,0:00:29.42,0:00:30.46,DefaultSingle-J,,0,0,0,,		山県さん
Dialogue: 0,0:00:30.91,0:00:33.24,DefaultSingle-J,,0,0,0,,		ああ　間違いなかったな
Dialogue: 0,0:00:33.87,0:00:36.96,DefaultSingle-J,,0,0,0,,		職人の自己満足で済む問題じゃない
Dialogue: 0,0:00:37.88,0:00:41.77,DefaultSingle-J,,0,0,0,,		うちが生きるか死ぬかビジネスの話だ
Dialogue: 0,0:00:44.09,0:00:45.41,DefaultSingle-J,,0,0,0,,		なんべんでも言うぞ
Dialogue: 0,0:00:46.01,0:00:47.71,DefaultSingle-J,,0,0,0,,		あんたのプランはボツだ
Dialogue: 0,0:00:48.34,0:00:49.23,DefaultSingle-J,,0,0,0,,		わかったか
Dialogue: 0,0:00:49.58,0:00:52.79,DefaultSingle-J,,0,0,0,,		お嬢さんの苦しい気持ちがわかるからこそ
Dialogue: 0,0:00:52.79,0:00:54.09,DefaultSingle-J,,0,0,0,,		知恵を絞ったんじゃ
Dialogue: 0,0:00:54.33,0:00:56.66,DefaultSingle-J,,0,0,0,,		頭ごなしに何だその言い草は
Dialogue: 0,0:00:56.78,0:00:59.49,DefaultSingle-J,,0,0,0,,		すっかり人の心を失ってしまいおって
Dialogue: 0,0:01:00.91,0:01:03.25,DefaultSingle-J,,0,0,0,,		そこまで言うか　お前が
Dialogue: 0,0:01:03.52,0:01:05.02,DefaultSingle-J,,0,0,0,,		ワシだから言うんだ
Dialogue: 0,0:01:05.37,0:01:07.00,DefaultSingle-J,,0,0,0,,		あんたが逃げ腰では
Dialogue: 0,0:01:07.12,0:01:09.59,DefaultSingle-J,,0,0,0,,		山県さんも腕の振るいようがないぞ
Dialogue: 0,0:01:19.75,0:01:20.62,DefaultSingle-J,,0,0,0,,		あの声は
Dialogue: 0,0:01:21.09,0:01:21.80,DefaultSingle-J,,0,0,0,,		まさか
Dialogue: 0,0:01:22.34,0:01:23.27,DefaultSingle-J,,0,0,0,,		正さん
Dialogue: 0,0:01:33.00,0:01:34.04,DefaultSingle-J,,0,0,0,,		正さん
Dialogue: 0,0:01:34.35,0:01:35.45,DefaultSingle-J,,0,0,0,,		どこ
Dialogue: 0,0:01:36.22,0:01:37.95,DefaultSingle-J,,0,0,0,,		返事してください
Dialogue: 0,0:01:38.09,0:01:39.99,DefaultSingle-J,,0,0,0,,		無事なら出て来いよ
Dialogue: 0,0:01:40.30,0:01:42.53,DefaultSingle-J,,0,0,0,,		あれ　羽生さんじゃない
Dialogue: 0,0:01:49.35,0:01:51.24,DefaultSingle-J,,0,0,0,,	{\pos(1200,1070)}	正さん　正さん
Dialogue: 0,0:02:04.22,0:02:05.73,DefaultSingle-J,,0,0,0,,		瞳はＭＡＸ　クリエイション
Dialogue: 0,0:02:05.92,0:02:07.33,DefaultSingle-J,,0,0,0,,		推理は明日へ　リアクション
Dialogue: 0,0:02:07.63,0:02:09.71,DefaultSingle-J,,0,0,0,,		夢生むスタジオ　悲しい現実
Dialogue: 0,0:02:09.86,0:02:11.38,DefaultSingle-J,,0,0,0,,		展望台で　なにが起きたか
Dialogue: 0,0:02:11.64,0:02:13.16,DefaultSingle-J,,0,0,0,,		たった１つの真実　見抜く
Dialogue: 0,0:02:13.16,0:02:15.71,DefaultSingle-J,,0,0,0,,		見た目は子供　頭脳は大人　その名は
Dialogue: 0,0:02:15.71,0:02:17.16,DefaultSingle-J,,0,0,0,,		名探偵コナン
Dialogue: 0,0:04:05.31,0:04:06.24,DefaultSingle-J,,0,0,0,,		な　なに
Dialogue: 0,0:04:06.40,0:04:08.15,DefaultSingle-J,,0,0,0,,		じ　事故じゃないのか
Dialogue: 0,0:04:08.47,0:04:11.18,DefaultSingle-J,,0,0,0,,		ああ　頭のキズを見ると
Dialogue: 0,0:04:11.18,0:04:12.77,DefaultSingle-J,,0,0,0,,		事故とは考えにくい
Dialogue: 0,0:04:13.05,0:04:15.09,DefaultSingle-J,,0,0,0,,	{\pos(800,1070)}	ってことは　まだ犯人は
Dialogue: 0,0:04:16.64,0:04:18.54,DefaultSingle-J,,0,0,0,,		この近くにいるんじゃないの
Dialogue: 0,0:04:18.85,0:04:20.03,DefaultSingle-J,,0,0,0,,		おい　どうした
Dialogue: 0,0:04:20.53,0:04:21.20,DefaultSingle-J,,0,0,0,,	{\pos(1100,1070)}	羽生
Dialogue: 0,0:04:21.70,0:04:22.74,DefaultSingle-J,,0,0,0,,	{\pos(1100,1070)}	なにごとです
Dialogue: 0,0:04:23.81,0:04:24.70,DefaultSingle-J,,0,0,0,,		羽生主任
Dialogue: 0,0:04:25.34,0:04:26.42,DefaultSingle-J,,0,0,0,,		まだ息はある
Dialogue: 0,0:04:26.78,0:04:28.52,DefaultSingle-J,,0,0,0,,		救急車は手配済みじゃ
Dialogue: 0,0:04:29.31,0:04:30.06,DefaultSingle-J,,0,0,0,,		それより
Dialogue: 0,0:04:30.24,0:04:33.60,DefaultSingle-J,,0,0,0,,		犯人がまだ近くに潜んでいる可能性があるんだ
Dialogue: 0,0:04:34.25,0:04:36.12,DefaultSingle-J,,0,0,0,,		この中をくまなく調べてくれ
Dialogue: 0,0:04:36.76,0:04:37.28,DefaultSingle-J,,0,0,0,,		頼む
Dialogue: 0,0:04:37.45,0:04:37.87,DefaultSingle-J,,0,0,0,,		はい
Dialogue: 0,0:04:38.59,0:04:41.00,DefaultSingle-J,,0,0,0,,		犯人は凶器を持っとるかもしれん
Dialogue: 0,0:04:41.40,0:04:42.47,DefaultSingle-J,,0,0,0,,		用心してくれ
Dialogue: 0,0:04:43.37,0:04:44.13,DefaultSingle-J,,0,0,0,,		わかりました
Dialogue: 0,0:04:44.69,0:04:46.81,DefaultSingle-J,,0,0,0,,		全員　その場を動かないでください
Dialogue: 0,0:04:50.71,0:04:52.39,DefaultSingle-J,,0,0,0,,	{\pos(700,1070)}	なに　これ
Dialogue: 0,0:04:52.79,0:04:54.34,DefaultSingle-J,,0,0,0,,		どうしたね　しのぶさん
Dialogue: 0,0:04:54.76,0:04:57.37,DefaultSingle-J,,0,0,0,,		手にこんなものが
Dialogue: 0,0:04:59.77,0:05:04.09,DefaultSingle-J,,0,0,0,,		正さんの殴られた傷口のそばについていたんだと思います
Dialogue: 0,0:05:05.46,0:05:07.29,DefaultSingle-J,,0,0,0,,		この色はどこかで
Dialogue: 0,0:05:07.73,0:05:09.12,DefaultSingle-J,,0,0,0,,		タロスの色じゃない
Dialogue: 0,0:05:09.40,0:05:10.20,DefaultSingle-J,,0,0,0,,		まさか
Dialogue: 0,0:05:12.62,0:05:14.33,DefaultSingle-J,,0,0,0,,		あの拳が羽生さんを
Dialogue: 0,0:05:14.76,0:05:15.42,DefaultSingle-J,,0,0,0,,		バカな
Dialogue: 0,0:05:15.92,0:05:18.31,DefaultSingle-J,,0,0,0,,		足のないタロスができるわけがない
Dialogue: 0,0:05:20.13,0:05:22.77,DefaultSingle-J,,0,0,0,,		ドームの中に怪しい者は見つかりません
Dialogue: 0,0:05:23.27,0:05:27.21,DefaultSingle-J,,0,0,0,,		電源が切れた時に落下したフィギュアや模型だけでした
Dialogue: 0,0:05:28.11,0:05:30.91,DefaultSingle-J,,0,0,0,,		窓や通風口から侵入した可能性は
Dialogue: 0,0:05:31.52,0:05:34.14,DefaultSingle-J,,0,0,0,,		いえ　その痕跡も全くありません
Dialogue: 0,0:05:35.26,0:05:37.88,DefaultSingle-J,,0,0,0,,		今　防犯カメラもチェックしてもらっていますが
Dialogue: 0,0:05:38.27,0:05:40.92,DefaultSingle-J,,0,0,0,,		不審者の姿は確認できていません
Dialogue: 0,0:05:41.58,0:05:44.52,DefaultSingle-J,,0,0,0,,		では羽生君は誰に殴られたというんだ
Dialogue: 0,0:05:47.43,0:05:49.17,DefaultSingle-J,,0,0,0,,		頼むぞ　羽生君を
Dialogue: 0,0:05:49.54,0:05:51.95,DefaultSingle-J,,0,0,0,,		うちにとっては大切な男なんだ
Dialogue: 0,0:05:52.52,0:05:52.99,DefaultSingle-J,,0,0,0,,		はい
Dialogue: 0,0:05:55.04,0:06:00.33,DefaultSingle-J,,0,0,0,,		すると犯人は一瞬の隙をついて逃げたというわけか
Dialogue: 0,0:06:01.98,0:06:03.96,DefaultSingle-J,,0,0,0,,		じゃがワシらは悲鳴を聞いて
Dialogue: 0,0:06:03.96,0:06:05.65,DefaultSingle-J,,0,0,0,,		すぐ駆けつけたから
Dialogue: 0,0:06:05.86,0:06:08.57,DefaultSingle-J,,0,0,0,,		そんな暇はなかったと思うがな
Dialogue: 0,0:06:08.72,0:06:09.41,DefaultSingle-J,,0,0,0,,		ハイ
Dialogue: 0,0:06:09.86,0:06:12.28,DefaultSingle-J,,0,0,0,,		ここから誰も出てこなかったぞ
Dialogue: 0,0:06:12.62,0:06:14.91,DefaultSingle-J,,0,0,0,,		僕も怪しい人は見てません
Dialogue: 0,0:06:15.12,0:06:15.96,DefaultSingle-J,,0,0,0,,		歩美も
Dialogue: 0,0:06:16.50,0:06:17.82,DefaultSingle-J,,0,0,0,,		急いで来たので
Dialogue: 0,0:06:17.82,0:06:19.77,DefaultSingle-J,,0,0,0,,		確かなことは言えませんけど
Dialogue: 0,0:06:21.26,0:06:22.43,DefaultSingle-J,,0,0,0,,		どちらにせよ
Dialogue: 0,0:06:22.67,0:06:26.25,DefaultSingle-J,,0,0,0,,		施設に詳しい者の犯行に間違いはなさそうだな
Dialogue: 0,0:06:27.71,0:06:28.58,DefaultSingle-J,,0,0,0,,		確かに
Dialogue: 0,0:06:28.71,0:06:32.39,DefaultSingle-J,,0,0,0,,		電源を切り模型が落下する状況を利用して
Dialogue: 0,0:06:32.39,0:06:35.23,DefaultSingle-J,,0,0,0,,		羽生さんを殴ったと考えるのが自然だが
Dialogue: 0,0:06:36.21,0:06:38.96,DefaultSingle-J,,0,0,0,,		それでは犯人が逃げる時間はなかったはず
Dialogue: 0,0:06:39.86,0:06:42.30,DefaultSingle-J,,0,0,0,,		それに　あの青銅色の塗料
Dialogue: 0,0:06:43.68,0:06:46.37,DefaultSingle-J,,0,0,0,,		なぜ羽生さんの傷口に付着してたんだ
Dialogue: 0,0:06:47.32,0:06:48.84,DefaultSingle-J,,0,0,0,,		外部からの侵入者
Dialogue: 0,0:06:49.72,0:06:52.49,DefaultSingle-J,,0,0,0,,		うちはオリジナリティーのある製品を出して
Dialogue: 0,0:06:52.49,0:06:54.84,DefaultSingle-J,,0,0,0,,		海外にも高い評価を得ています
Dialogue: 0,0:06:55.28,0:06:57.88,DefaultSingle-J,,0,0,0,,		その可能性もあるという話です
Dialogue: 0,0:06:58.20,0:07:01.17,DefaultSingle-J,,0,0,0,,		だとしたら　セキュリティーも厳重なはずでは
Dialogue: 0,0:07:01.61,0:07:04.69,DefaultSingle-J,,0,0,0,,		あくまでも可能性の話です
Dialogue: 0,0:07:05.25,0:07:08.52,DefaultSingle-J,,0,0,0,,		警備員に確認していただくのが賢明でしょう
Dialogue: 0,0:07:09.37,0:07:11.53,DefaultSingle-J,,0,0,0,,		話した方がよさそうですよ
Dialogue: 0,0:07:12.14,0:07:13.22,DefaultSingle-J,,0,0,0,,		そうだな
Dialogue: 0,0:07:13.32,0:07:14.67,DefaultSingle-J,,0,0,0,,		気になることでも
Dialogue: 0,0:07:16.47,0:07:19.11,DefaultSingle-J,,0,0,0,,		実は通用口のドアが故障していて
Dialogue: 0,0:07:19.34,0:07:21.71,DefaultSingle-J,,0,0,0,,		鍵がかけられない状態なんです
Dialogue: 0,0:07:21.95,0:07:22.90,DefaultSingle-J,,0,0,0,,		それだ
Dialogue: 0,0:07:23.36,0:07:25.07,DefaultSingle-J,,0,0,0,,		犯人はきっとそこから
Dialogue: 0,0:07:27.50,0:07:29.59,DefaultSingle-J,,0,0,0,,		そのドアなら大丈夫だぜ
Dialogue: 0,0:07:29.87,0:07:34.72,DefaultSingle-J,,0,0,0,,		ちゃんとこの俺が開かないようにしておいたからな
Dialogue: 0,0:07:35.22,0:07:37.85,DefaultSingle-J,,0,0,0,,		確かに動かされた様子はありません
Dialogue: 0,0:07:40.48,0:07:42.30,DefaultSingle-J,,0,0,0,,		これで正門　通用口　
Dialogue: 0,0:07:42.85,0:07:44.42,DefaultSingle-J,,0,0,0,,		防犯カメラの記録から
Dialogue: 0,0:07:44.42,0:07:47.54,DefaultSingle-J,,0,0,0,,		不審者が侵入した可能性はないかと思います
Dialogue: 0,0:07:47.75,0:07:49.20,DefaultSingle-J,,0,0,0,,		お手柄だよ　元太君
Dialogue: 0,0:07:49.85,0:07:50.87,DefaultSingle-J,,0,0,0,,		やった
Dialogue: 0,0:07:51.12,0:07:53.58,DefaultSingle-J,,0,0,0,,		つまり　この中に犯人がいるのね
Dialogue: 0,0:07:55.24,0:07:56.82,DefaultSingle-J,,0,0,0,,		犯行時直前に
Dialogue: 0,0:07:56.94,0:07:59.49,DefaultSingle-J,,0,0,0,,		ワシ達は山県さんに挨拶をして
Dialogue: 0,0:07:59.66,0:08:03.41,DefaultSingle-J,,0,0,0,,		しのぶさんはずっとワシ達と一緒にいたはずじゃが
Dialogue: 0,0:08:03.78,0:08:04.49,DefaultSingle-J,,0,0,0,,		阿笠
Dialogue: 0,0:08:04.77,0:08:06.60,DefaultSingle-J,,0,0,0,,		犯人は俺とでも言うのか
Dialogue: 0,0:08:06.60,0:08:08.01,DefaultSingle-J,,0,0,0,,		バ　バ　バカ
Dialogue: 0,0:08:08.51,0:08:10.21,DefaultSingle-J,,0,0,0,,		そんなことは言っておらん
Dialogue: 0,0:08:10.21,0:08:12.69,DefaultSingle-J,,0,0,0,,		ただ　事実を言ったまでじゃ
Dialogue: 0,0:08:13.64,0:08:15.98,DefaultSingle-J,,0,0,0,,		大学時代からの友人だそうです
Dialogue: 0,0:08:16.73,0:08:19.97,DefaultSingle-J,,0,0,0,,		学生時代は熱く語り合ったこともあるそうで
Dialogue: 0,0:08:21.67,0:08:23.00,DefaultSingle-J,,0,0,0,,		ねえ　社長さん
Dialogue: 0,0:08:23.25,0:08:26.94,DefaultSingle-J,,0,0,0,,		このドーム設備を操作するリモコンって　いくつあるの
Dialogue: 0,0:08:27.26,0:08:28.19,DefaultSingle-J,,0,0,0,,		２台だ
Dialogue: 0,0:08:28.45,0:08:32.53,DefaultSingle-J,,0,0,0,,		山県と案内役を任せているしのぶが持っているが
Dialogue: 0,0:08:33.06,0:08:34.03,DefaultSingle-J,,0,0,0,,		山県さん
Dialogue: 0,0:08:34.03,0:08:35.80,DefaultSingle-J,,0,0,0,,		そのリモコン今　持ってる
Dialogue: 0,0:08:36.18,0:08:37.16,DefaultSingle-J,,0,0,0,,		あ　ああ
Dialogue: 0,0:08:38.42,0:08:39.72,DefaultSingle-J,,0,0,0,,		これのことだね
Dialogue: 0,0:08:40.63,0:08:42.92,DefaultSingle-J,,0,0,0,,		他のリモコンと区別つくの
Dialogue: 0,0:08:43.28,0:08:45.62,DefaultSingle-J,,0,0,0,,		いや　２台とも同じ形だよ
Dialogue: 0,0:08:47.62,0:08:52.43,DefaultSingle-J,,0,0,0,,		それよりもまず犯行時刻の皆さんのアリバイを伺いましょう
Dialogue: 0,0:08:52.87,0:08:53.86,DefaultSingle-J,,0,0,0,,		加賀見社長
Dialogue: 0,0:08:53.86,0:08:55.06,DefaultSingle-J,,0,0,0,,		いかがですかな
Dialogue: 0,0:08:56.54,0:09:01.09,DefaultSingle-J,,0,0,0,,		羽生君の悲鳴を聞いたのは電話での交渉が終わり
Dialogue: 0,0:09:01.09,0:09:03.35,DefaultSingle-J,,0,0,0,,		オフィスで帰り支度していた時
Dialogue: 0,0:09:04.25,0:09:06.86,DefaultSingle-J,,0,0,0,,		警備員が戻って来た時だったが
Dialogue: 0,0:09:07.70,0:09:08.43,DefaultSingle-J,,0,0,0,,		そうだな
Dialogue: 0,0:09:09.00,0:09:10.63,DefaultSingle-J,,0,0,0,,		ええ　その通りです
Dialogue: 0,0:09:12.86,0:09:14.13,DefaultSingle-J,,0,0,0,,		気になるのは
Dialogue: 0,0:09:14.13,0:09:16.65,DefaultSingle-J,,0,0,0,,		羽生さんがなぜ展望台にいたのか
Dialogue: 0,0:09:16.99,0:09:19.97,DefaultSingle-J,,0,0,0,,		なぜドームの電源を落とす必要があったのか
Dialogue: 0,0:09:20.83,0:09:23.14,DefaultSingle-J,,0,0,0,,		犯行時ドームの照明が消え
Dialogue: 0,0:09:23.37,0:09:25.27,DefaultSingle-J,,0,0,0,,		羽生さんの悲鳴の後
Dialogue: 0,0:09:25.27,0:09:27.37,DefaultSingle-J,,0,0,0,,		模型が落下する音が聞こえた
Dialogue: 0,0:09:27.79,0:09:30.67,DefaultSingle-J,,0,0,0,,		その直後　再び照明が戻ったってことは
Dialogue: 0,0:09:32.36,0:09:35.24,DefaultSingle-J,,0,0,0,,		羽生さんがリモコンを持っていた可能性が高い
Dialogue: 0,0:09:36.40,0:09:37.57,DefaultSingle-J,,0,0,0,,		だとすれば
Dialogue: 0,0:09:38.24,0:09:41.53,DefaultSingle-J,,0,0,0,,		リモコンを落としたのはこの辺になるはずなんだが
Dialogue: 0,0:09:42.40,0:09:43.72,DefaultSingle-J,,0,0,0,,		何か探しモノ
Dialogue: 0,0:09:45.26,0:09:46.57,DefaultSingle-J,,0,0,0,,		ちょうどよかった
Dialogue: 0,0:09:46.78,0:09:49.82,DefaultSingle-J,,0,0,0,,		悪いけど　手分けしてリモコンを探してくれねぇか
Dialogue: 0,0:09:50.36,0:09:52.91,DefaultSingle-J,,0,0,0,,		半径１０メートルくらいでいいんだが
Dialogue: 0,0:09:55.05,0:09:55.97,DefaultSingle-J,,0,0,0,,		了解
Dialogue: 0,0:10:01.18,0:10:03.34,DefaultSingle-J,,0,0,0,,		どうしてリモコン探すの
Dialogue: 0,0:10:03.64,0:10:06.72,DefaultSingle-J,,0,0,0,,		ホラ　あの時　ドームの照明が消えたでしょう
Dialogue: 0,0:10:06.86,0:10:09.31,DefaultSingle-J,,0,0,0,,		だけどすぐ照明は戻ったから
Dialogue: 0,0:10:09.86,0:10:10.62,DefaultSingle-J,,0,0,0,,		だから
Dialogue: 0,0:10:10.96,0:10:11.81,DefaultSingle-J,,0,0,0,,		つまり
Dialogue: 0,0:10:11.81,0:10:14.43,DefaultSingle-J,,0,0,0,,		リモコンはそれまで羽生さんが持っていたんだ
Dialogue: 0,0:10:14.98,0:10:17.03,DefaultSingle-J,,0,0,0,,		羽生さんはあの場所に立って
Dialogue: 0,0:10:17.03,0:10:19.36,DefaultSingle-J,,0,0,0,,		リモコンで電源を一旦切った
Dialogue: 0,0:10:20.74,0:10:22.88,DefaultSingle-J,,0,0,0,,		襲われてリモコンを落としたから
Dialogue: 0,0:10:22.88,0:10:24.31,DefaultSingle-J,,0,0,0,,		電源が切れたんじゃない
Dialogue: 0,0:10:24.78,0:10:26.54,DefaultSingle-J,,0,0,0,,		いや　それだと
Dialogue: 0,0:10:26.54,0:10:29.94,DefaultSingle-J,,0,0,0,,		羽生さんの悲鳴の後に電源が切れるはずなんだ
Dialogue: 0,0:10:30.61,0:10:31.62,DefaultSingle-J,,0,0,0,,		そっか
Dialogue: 0,0:10:32.36,0:10:36.06,DefaultSingle-J,,0,0,0,,		だから電源を切ったのは羽生さんの意志ということになる
Dialogue: 0,0:10:36.77,0:10:38.58,DefaultSingle-J,,0,0,0,,		それはなんのためだろう
Dialogue: 0,0:10:39.70,0:10:42.92,DefaultSingle-J,,0,0,0,,		結構　探したけど　見つからないわ
Dialogue: 0,0:10:43.25,0:10:46.29,DefaultSingle-J,,0,0,0,,		落としたリモコン　犯人が持ち去ったとか
Dialogue: 0,0:10:47.09,0:10:47.94,DefaultSingle-J,,0,0,0,,		それだ
Dialogue: 0,0:10:48.07,0:10:49.81,DefaultSingle-J,,0,0,0,,		間違いありません
Dialogue: 0,0:10:49.92,0:10:50.46,DefaultSingle-J,,0,0,0,,		うん
Dialogue: 0,0:10:51.29,0:10:53.82,DefaultSingle-J,,0,0,0,,		たとえ犯人が持ち去ったとしても
Dialogue: 0,0:10:54.14,0:10:57.84,DefaultSingle-J,,0,0,0,,		俺達に見られずここから出る時間はなかったはず
Dialogue: 0,0:10:58.72,0:11:00.21,DefaultSingle-J,,0,0,0,,		そうでした
Dialogue: 0,0:11:00.51,0:11:00.93,DefaultSingle-J,,0,0,0,,		あれ
Dialogue: 0,0:11:02.66,0:11:03.50,DefaultSingle-J,,0,0,0,,		どうしたの
Dialogue: 0,0:11:03.93,0:11:05.88,DefaultSingle-J,,0,0,0,,		確か　あの時
Dialogue: 0,0:11:14.15,0:11:14.88,DefaultSingle-J,,0,0,0,,		歩美ちゃん
Dialogue: 0,0:11:15.16,0:11:17.43,DefaultSingle-J,,0,0,0,,		確か　天の浮舟　撮ってたよね
Dialogue: 0,0:11:17.74,0:11:19.62,DefaultSingle-J,,0,0,0,,		え　撮ったけど
Dialogue: 0,0:11:19.88,0:11:20.70,DefaultSingle-J,,0,0,0,,		ちょっと見せて
Dialogue: 0,0:11:22.73,0:11:23.16,DefaultSingle-J,,0,0,0,,		ハイ
Dialogue: 0,0:11:24.68,0:11:25.76,DefaultSingle-J,,0,0,0,,		サンキュー
Dialogue: 0,0:11:27.19,0:11:29.40,DefaultSingle-J,,0,0,0,,		やっぱり　ホラ
Dialogue: 0,0:11:30.56,0:11:34.33,DefaultSingle-J,,0,0,0,,		これが見学の時　最後に見た天の浮舟の位置
Dialogue: 0,0:11:35.61,0:11:38.68,DefaultSingle-J,,0,0,0,,		でも今はあの位置に移動している
Dialogue: 0,0:11:40.22,0:11:41.29,DefaultSingle-J,,0,0,0,,		ホントだ
Dialogue: 0,0:11:41.50,0:11:43.62,DefaultSingle-J,,0,0,0,,		船の位置が違っています
Dialogue: 0,0:11:43.69,0:11:44.91,DefaultSingle-J,,0,0,0,,		どうしてだ
Dialogue: 0,0:11:45.05,0:11:48.16,DefaultSingle-J,,0,0,0,,		電源が切れた時動いてしまったとか
Dialogue: 0,0:11:48.73,0:11:51.89,DefaultSingle-J,,0,0,0,,		いや　グラスファイバー製で軽量の船が
Dialogue: 0,0:11:52.05,0:11:53.82,DefaultSingle-J,,0,0,0,,		電源が切れたからといって
Dialogue: 0,0:11:53.82,0:11:55.74,DefaultSingle-J,,0,0,0,,		あそこまで移動するでしょうか
Dialogue: 0,0:11:57.23,0:11:59.66,DefaultSingle-J,,0,0,0,,		手にこんなものが
Dialogue: 0,0:12:01.20,0:12:02.79,DefaultSingle-J,,0,0,0,,		そうか
Dialogue: 0,0:12:02.95,0:12:04.39,DefaultSingle-J,,0,0,0,,		そういうことか
Dialogue: 0,0:12:10.97,0:12:12.54,DefaultSingle-J,,0,0,0,,		なにか変わったこと
Dialogue: 0,0:12:12.89,0:12:17.11,DefaultSingle-J,,0,0,0,,		どんなささいなことでもかまいません　ありませんか
Dialogue: 0,0:12:17.39,0:12:18.60,DefaultSingle-J,,0,0,0,,		そういえば
Dialogue: 0,0:12:18.92,0:12:21.54,DefaultSingle-J,,0,0,0,,		オフィスで交渉の電話の最中に
Dialogue: 0,0:12:21.75,0:12:24.67,DefaultSingle-J,,0,0,0,,		誰かわからんが訪ねてきた者がいて
Dialogue: 0,0:12:25.37,0:12:28.81,DefaultSingle-J,,0,0,0,,		ドアの開け閉めする音が２度聞こえたんだが
Dialogue: 0,0:12:29.45,0:12:30.28,DefaultSingle-J,,0,0,0,,		２度
Dialogue: 0,0:12:30.54,0:12:34.05,DefaultSingle-J,,0,0,0,,		何者かが来て出ていったということですな
Dialogue: 0,0:12:34.39,0:12:36.82,DefaultSingle-J,,0,0,0,,		それが誰なのか心あたりは　ありますかな
Dialogue: 0,0:12:37.48,0:12:40.47,DefaultSingle-J,,0,0,0,,		羽生君か山県君だと思ったんだが
Dialogue: 0,0:12:40.99,0:12:42.36,DefaultSingle-J,,0,0,0,,		あれは君だったのか
Dialogue: 0,0:12:42.95,0:12:45.02,DefaultSingle-J,,0,0,0,,		いえ　私では
Dialogue: 0,0:12:45.78,0:12:47.73,DefaultSingle-J,,0,0,0,,		それなら　羽生君だったんだろう
Dialogue: 0,0:12:48.37,0:12:51.87,DefaultSingle-J,,0,0,0,,		あるいは犯人がすでに忍び込んでいたのか
Dialogue: 0,0:12:52.32,0:12:52.97,DefaultSingle-J,,0,0,0,,		警部
Dialogue: 0,0:12:53.36,0:12:57.45,DefaultSingle-J,,0,0,0,,		やはり犯行時前後にスタジオに出入りした人物の形跡が
Dialogue: 0,0:12:57.45,0:12:59.42,DefaultSingle-J,,0,0,0,,		見つかってないということは
Dialogue: 0,0:13:00.58,0:13:04.34,DefaultSingle-J,,0,0,0,,		スタジオ内をしらみつぶしに探すしかないだろうな
Dialogue: 0,0:13:04.56,0:13:06.83,DefaultSingle-J,,0,0,0,,		必ず犯人を探し出してください
Dialogue: 0,0:13:07.48,0:13:10.13,DefaultSingle-J,,0,0,0,,		なにしろ　この男のアイデアだけでも
Dialogue: 0,0:13:10.27,0:13:12.51,DefaultSingle-J,,0,0,0,,		同業者には宝の山だ
Dialogue: 0,0:13:12.68,0:13:15.16,DefaultSingle-J,,0,0,0,,		や　やめてくださいよ　社長
Dialogue: 0,0:13:15.57,0:13:17.40,DefaultSingle-J,,0,0,0,,		いらぬ謙遜をするな
Dialogue: 0,0:13:18.20,0:13:20.20,DefaultSingle-J,,0,0,0,,		貴様はもっと胸を張っとれ
Dialogue: 0,0:13:21.62,0:13:24.79,DefaultSingle-J,,0,0,0,,		しかし　俺なんて金食い虫で
Dialogue: 0,0:13:27.67,0:13:31.92,DefaultSingle-J,,0,0,0,,		ワシも羽生君も貴様に文句をつけるのが仕事なんだ
Dialogue: 0,0:13:32.38,0:13:34.51,DefaultSingle-J,,0,0,0,,		いちいち気にするな　バカもん
Dialogue: 0,0:13:38.21,0:13:42.20,DefaultSingle-J,,0,0,0,,		オフィスや倉庫など犯人の隠れるスペースは十分です
Dialogue: 0,0:13:42.59,0:13:45.17,DefaultSingle-J,,0,0,0,,		最初から企業秘密が目当てなら
Dialogue: 0,0:13:45.27,0:13:47.56,DefaultSingle-J,,0,0,0,,		宝を漁っている最中に
Dialogue: 0,0:13:47.77,0:13:48.92,DefaultSingle-J,,0,0,0,,		なるほど
Dialogue: 0,0:13:49.61,0:13:53.48,DefaultSingle-J,,0,0,0,,		そいつが羽生さんと鉢合わせした可能性はあるなぁ
Dialogue: 0,0:13:54.60,0:13:55.85,DefaultSingle-J,,0,0,0,,		なんじゃ　コナン君
Dialogue: 0,0:13:57.74,0:14:01.11,DefaultSingle-J,,0,0,0,,		しのぶさんに確かめてほしいことがあるんだ
Dialogue: 0,0:14:07.39,0:14:08.11,DefaultSingle-J,,0,0,0,,		ワシだ
Dialogue: 0,0:14:08.66,0:14:10.71,DefaultSingle-J,,0,0,0,,		どうした　羽生君の容体は
Dialogue: 0,0:14:11.94,0:14:13.78,DefaultSingle-J,,0,0,0,,		泣いておってはわからん
Dialogue: 0,0:14:14.03,0:14:15.25,DefaultSingle-J,,0,0,0,,		しっかりせんか
Dialogue: 0,0:14:16.67,0:14:18.26,DefaultSingle-J,,0,0,0,,		今が峠だって
Dialogue: 0,0:14:19.03,0:14:20.63,DefaultSingle-J,,0,0,0,,		どうしよう　お父さん
Dialogue: 0,0:14:21.00,0:14:23.96,DefaultSingle-J,,0,0,0,,		お前が信じて見守ってやらんで　どうする
Dialogue: 0,0:14:24.34,0:14:25.42,DefaultSingle-J,,0,0,0,,		目が覚めた時
Dialogue: 0,0:14:25.57,0:14:28.92,DefaultSingle-J,,0,0,0,,		一番見たいのはお前の元気な姿なんだぞ
Dialogue: 0,0:14:29.44,0:14:32.30,DefaultSingle-J,,0,0,0,,		そうね　ありがとう　お父さん
Dialogue: 0,0:14:32.88,0:14:34.86,DefaultSingle-J,,0,0,0,,		それで　犯人は
Dialogue: 0,0:14:35.79,0:14:37.26,DefaultSingle-J,,0,0,0,,		残念だが　まだ
Dialogue: 0,0:14:37.89,0:14:38.52,DefaultSingle-J,,0,0,0,,		なに
Dialogue: 0,0:14:39.74,0:14:40.73,DefaultSingle-J,,0,0,0,,		あのね
Dialogue: 0,0:14:41.26,0:14:43.61,DefaultSingle-J,,0,0,0,,		なんだ　邪魔な子供だな
Dialogue: 0,0:14:44.14,0:14:45.11,DefaultSingle-J,,0,0,0,,		だな
Dialogue: 0,0:14:45.40,0:14:47.32,DefaultSingle-J,,0,0,0,,		いや　すまんが
Dialogue: 0,0:14:47.32,0:14:50.05,DefaultSingle-J,,0,0,0,,		その子の注文を聞いてやってくれんか
Dialogue: 0,0:14:50.21,0:14:51.15,DefaultSingle-J,,0,0,0,,		なにを言っとる
Dialogue: 0,0:14:51.88,0:14:53.91,DefaultSingle-J,,0,0,0,,		早くこの子供を連れて
Dialogue: 0,0:14:56.35,0:14:57.50,DefaultSingle-J,,0,0,0,,		教えて　お姉さん
Dialogue: 0,0:14:58.35,0:14:59.10,DefaultSingle-J,,0,0,0,,		なあに
Dialogue: 0,0:14:59.59,0:15:01.88,DefaultSingle-J,,0,0,0,,		お姉さんのリモコン　そこに持ってる
Dialogue: 0,0:15:03.57,0:15:04.76,DefaultSingle-J,,0,0,0,,		何をするか
Dialogue: 0,0:15:05.37,0:15:06.49,DefaultSingle-J,,0,0,0,,		持ってるけど
Dialogue: 0,0:15:08.27,0:15:09.76,DefaultSingle-J,,0,0,0,,		これがどうかしたの
Dialogue: 0,0:15:10.31,0:15:12.87,DefaultSingle-J,,0,0,0,,		だったらいいんだ　ありがとう
Dialogue: 0,0:15:15.18,0:15:16.98,DefaultSingle-J,,0,0,0,,		このいたずらボウズ
Dialogue: 0,0:15:17.73,0:15:19.69,DefaultSingle-J,,0,0,0,,		なんなんだ　あいつは
Dialogue: 0,0:15:23.94,0:15:27.20,DefaultSingle-J,,0,0,0,,		その顔は謎が解けたみたいね
Dialogue: 0,0:15:27.50,0:15:29.09,DefaultSingle-J,,0,0,0,,		ああ　大体はな
Dialogue: 0,0:15:29.71,0:15:30.40,DefaultSingle-J,,0,0,0,,		博士
Dialogue: 0,0:15:30.56,0:15:32.91,DefaultSingle-J,,0,0,0,,		もうひとつ確認したいことがあるんだけど
Dialogue: 0,0:15:35.70,0:15:37.01,DefaultSingle-J,,0,0,0,,		では　これから
Dialogue: 0,0:15:37.52,0:15:41.50,DefaultSingle-J,,0,0,0,,		スタジオ全域で徹底的に犯人の捜索を始める
Dialogue: 0,0:15:42.08,0:15:43.92,DefaultSingle-J,,0,0,0,,		ご協力をお願いします
Dialogue: 0,0:15:44.11,0:15:44.48,DefaultSingle-J,,0,0,0,,		はっ
Dialogue: 0,0:15:44.71,0:15:47.50,DefaultSingle-J,,0,0,0,,		いや　その必要はなくなりました
Dialogue: 0,0:15:50.10,0:15:52.97,DefaultSingle-J,,0,0,0,,		阿笠博士　それはどういうことですか
Dialogue: 0,0:15:53.14,0:15:54.89,DefaultSingle-J,,0,0,0,,		犯人がわかったからです
Dialogue: 0,0:15:55.90,0:15:56.80,DefaultSingle-J,,0,0,0,,		犯人が
Dialogue: 0,0:15:57.24,0:15:58.18,DefaultSingle-J,,0,0,0,,		そいつは誰だ
Dialogue: 0,0:15:58.58,0:16:00.24,DefaultSingle-J,,0,0,0,,		まあまあ　落ち着いて
Dialogue: 0,0:16:03.94,0:16:05.94,DefaultSingle-J,,0,0,0,,		それから　なんじゃったかなぁ
Dialogue: 0,0:16:08.27,0:16:09.02,DefaultSingle-J,,0,0,0,,		博士
Dialogue: 0,0:16:09.02,0:16:11.13,DefaultSingle-J,,0,0,0,,		リモコンがなんとかって言ってたわよ
Dialogue: 0,0:16:11.81,0:16:13.73,DefaultSingle-J,,0,0,0,,		おお　そうじゃった
Dialogue: 0,0:16:14.28,0:16:15.46,DefaultSingle-J,,0,0,0,,		よろしいか
Dialogue: 0,0:16:15.79,0:16:18.94,DefaultSingle-J,,0,0,0,,		ドームの設備を操作するリモコンは２台ある
Dialogue: 0,0:16:19.55,0:16:21.38,DefaultSingle-J,,0,0,0,,		そうでしたな　加賀見社長
Dialogue: 0,0:16:22.29,0:16:23.21,DefaultSingle-J,,0,0,0,,		確かに
Dialogue: 0,0:16:23.52,0:16:27.58,DefaultSingle-J,,0,0,0,,		ところが　この犯行にはそのリモコンが使われておる
Dialogue: 0,0:16:28.56,0:16:31.40,DefaultSingle-J,,0,0,0,,		消した電源がすぐ元に戻ったが
Dialogue: 0,0:16:33.66,0:16:35.45,DefaultSingle-J,,0,0,0,,		その一瞬の間に
Dialogue: 0,0:16:36.06,0:16:39.11,DefaultSingle-J,,0,0,0,,		空間を浮遊していた模型はすべて落下した
Dialogue: 0,0:16:39.53,0:16:42.67,DefaultSingle-J,,0,0,0,,		じゃが　そのなかで不自然な点があったんじゃ
Dialogue: 0,0:16:43.70,0:16:47.22,DefaultSingle-J,,0,0,0,,		それが天の浮舟じゃ
Dialogue: 0,0:16:49.20,0:16:51.46,DefaultSingle-J,,0,0,0,,		電源が切れた状況で
Dialogue: 0,0:16:51.79,0:16:55.12,DefaultSingle-J,,0,0,0,,		固定がとかれたブランコ状の天の浮舟は
Dialogue: 0,0:16:55.56,0:16:58.60,DefaultSingle-J,,0,0,0,,		基部の下にぶら下がる状態になるはずじゃ
Dialogue: 0,0:16:59.79,0:17:02.39,DefaultSingle-J,,0,0,0,,		だが　天の浮舟は　あそこにある
Dialogue: 0,0:17:02.90,0:17:05.80,DefaultSingle-J,,0,0,0,,		それも事件の前後で異なった場所にな
Dialogue: 0,0:17:06.54,0:17:09.11,DefaultSingle-J,,0,0,0,,		それはどういうことですか
Dialogue: 0,0:17:09.11,0:17:10.73,DefaultSingle-J,,0,0,0,,		ああ　いや
Dialogue: 0,0:17:11.13,0:17:14.81,DefaultSingle-J,,0,0,0,,		それ　僕が最初に気付いたんだ
Dialogue: 0,0:17:15.47,0:17:18.04,DefaultSingle-J,,0,0,0,,		歩美ちゃんが撮った写真を見てたら
Dialogue: 0,0:17:18.41,0:17:18.89,DefaultSingle-J,,0,0,0,,		ホラ
Dialogue: 0,0:17:20.06,0:17:23.81,DefaultSingle-J,,0,0,0,,		これが見学した時の天の浮舟の最後の位置で
Dialogue: 0,0:17:24.52,0:17:28.03,DefaultSingle-J,,0,0,0,,		そして　事件後があの位置になってるでしょ
Dialogue: 0,0:17:29.19,0:17:31.02,DefaultSingle-J,,0,0,0,,		確かに位置が変わってる
Dialogue: 0,0:17:31.18,0:17:34.26,DefaultSingle-J,,0,0,0,,		誰かがリモコンを操作したということか
Dialogue: 0,0:17:34.90,0:17:37.82,DefaultSingle-J,,0,0,0,,		山県さんなら何かご承知じゃ
Dialogue: 0,0:17:38.13,0:17:39.54,DefaultSingle-J,,0,0,0,,		お　俺は
Dialogue: 0,0:17:40.31,0:17:45.67,DefaultSingle-J,,0,0,0,,		もしかして犯行の時に羽生さんがリモコンを持っていたとか
Dialogue: 0,0:17:47.19,0:17:50.86,DefaultSingle-J,,0,0,0,,		負傷した羽生さんを見つけて混乱している最中に
Dialogue: 0,0:17:51.17,0:17:53.21,DefaultSingle-J,,0,0,0,,		遅れてきた山県さんなら
Dialogue: 0,0:17:53.21,0:17:56.07,DefaultSingle-J,,0,0,0,,		リモコンを回収するチャンスはあったのでは
Dialogue: 0,0:17:56.17,0:17:58.73,DefaultSingle-J,,0,0,0,,		し　知らん　何も知らん
Dialogue: 0,0:17:59.24,0:18:00.40,DefaultSingle-J,,0,0,0,,		山県さん
Dialogue: 0,0:18:00.64,0:18:04.86,DefaultSingle-J,,0,0,0,,		オフィスで加賀見とワシの会話を聞いていたのはあんたじゃろ
Dialogue: 0,0:18:05.39,0:18:07.50,DefaultSingle-J,,0,0,0,,		山県さんの技術力あっての
Dialogue: 0,0:18:07.66,0:18:09.46,DefaultSingle-J,,0,0,0,,		このスタジオじゃないのか
Dialogue: 0,0:18:09.66,0:18:11.46,DefaultSingle-J,,0,0,0,,		何にも知らんくせに
Dialogue: 0,0:18:12.00,0:18:14.86,DefaultSingle-J,,0,0,0,,		うちが左前になったのはあいつの先代からだ
Dialogue: 0,0:18:15.30,0:18:16.10,DefaultSingle-J,,0,0,0,,		そんな
Dialogue: 0,0:18:27.14,0:18:27.94,DefaultSingle-J,,0,0,0,,		これは
Dialogue: 0,0:18:30.56,0:18:32.92,DefaultSingle-J,,0,0,0,,		それなら憎まれるのは私だ
Dialogue: 0,0:18:33.17,0:18:35.26,DefaultSingle-J,,0,0,0,,		なぜ羽生君を狙ったんだ
Dialogue: 0,0:18:36.61,0:18:37.71,DefaultSingle-J,,0,0,0,,		そうとも
Dialogue: 0,0:18:39.04,0:18:41.27,DefaultSingle-J,,0,0,0,,		俺が狙ったのはあんただ
Dialogue: 0,0:18:41.65,0:18:44.14,DefaultSingle-J,,0,0,0,,		だから罠にかけるつもりでいた
Dialogue: 0,0:18:45.37,0:18:47.35,DefaultSingle-J,,0,0,0,,		自信の作品ができました
Dialogue: 0,0:18:47.96,0:18:50.73,DefaultSingle-J,,0,0,0,,		今すぐドームでリモコンを使ってください
Dialogue: 0,0:18:51.29,0:18:54.32,DefaultSingle-J,,0,0,0,,		電源を切ればすばらしい場面がみられます
Dialogue: 0,0:18:56.90,0:18:58.89,DefaultSingle-J,,0,0,0,,		そんなメモをつけておいた
Dialogue: 0,0:18:59.54,0:19:02.27,DefaultSingle-J,,0,0,0,,		まさかそこに羽生君がいたとはね
Dialogue: 0,0:19:04.31,0:19:07.02,DefaultSingle-J,,0,0,0,,		それでようやく腑に落ちたわい
Dialogue: 0,0:19:07.32,0:19:09.36,DefaultSingle-J,,0,0,0,,		羽生君はきみの新作を
Dialogue: 0,0:19:09.36,0:19:13.80,DefaultSingle-J,,0,0,0,,		鈴木財閥との交渉の手土産にしようと思いついたんじゃ
Dialogue: 0,0:19:15.94,0:19:18.03,DefaultSingle-J,,0,0,0,,		それが罠とも知らずね
Dialogue: 0,0:19:23.48,0:19:25.55,DefaultSingle-J,,0,0,0,,		標的は加賀見社長だったのに
Dialogue: 0,0:19:26.16,0:19:28.52,DefaultSingle-J,,0,0,0,,		羽生さんが罠にかかってしまったんだ
Dialogue: 0,0:19:29.03,0:19:32.22,DefaultSingle-J,,0,0,0,,		詳しい内容は署で聞かせてもらうよ
Dialogue: 0,0:19:33.99,0:19:35.62,DefaultSingle-J,,0,0,0,,		おい　逃げても無駄だ
Dialogue: 0,0:19:36.89,0:19:38.19,DefaultSingle-J,,0,0,0,,		そっちに出口はないぞ
Dialogue: 0,0:19:38.69,0:19:39.33,DefaultSingle-J,,0,0,0,,		まさか
Dialogue: 0,0:19:39.62,0:19:40.51,DefaultSingle-J,,0,0,0,,		来るな
Dialogue: 0,0:19:41.65,0:19:42.37,DefaultSingle-J,,0,0,0,,		あぶない
Dialogue: 0,0:19:42.37,0:19:43.25,DefaultSingle-J,,0,0,0,,		みんな伏せて
Dialogue: 0,0:19:46.87,0:19:47.74,DefaultSingle-J,,0,0,0,,		消えた
Dialogue: 0,0:19:55.51,0:19:56.12,DefaultSingle-J,,0,0,0,,		何
Dialogue: 0,0:19:56.62,0:19:57.32,DefaultSingle-J,,0,0,0,,		あれは
Dialogue: 0,0:19:58.11,0:19:59.30,DefaultSingle-J,,0,0,0,,		タロスの手が
Dialogue: 0,0:20:00.33,0:20:01.28,DefaultSingle-J,,0,0,0,,		逃げろ
Dialogue: 0,0:20:01.68,0:20:02.39,DefaultSingle-J,,0,0,0,,		山県
Dialogue: 0,0:20:09.23,0:20:09.99,DefaultSingle-J,,0,0,0,,		スマン
Dialogue: 0,0:20:14.54,0:20:15.82,DefaultSingle-J,,0,0,0,,		させるかぁ
Dialogue: 0,0:20:38.27,0:20:39.06,DefaultSingle-J,,0,0,0,,		山県
Dialogue: 0,0:20:40.69,0:20:41.63,DefaultSingle-J,,0,0,0,,		よく聞け
Dialogue: 0,0:20:42.07,0:20:45.46,DefaultSingle-J,,0,0,0,,		ついさっきフランクリン企画と契約が成立した
Dialogue: 0,0:20:45.85,0:20:48.21,DefaultSingle-J,,0,0,0,,		ここはフランクリン日本支社になる
Dialogue: 0,0:20:48.62,0:20:50.44,DefaultSingle-J,,0,0,0,,		従業員のリストラはなし
Dialogue: 0,0:20:50.76,0:20:52.15,DefaultSingle-J,,0,0,0,,		全員そのままだ
Dialogue: 0,0:20:53.93,0:20:56.08,DefaultSingle-J,,0,0,0,,		カガミの名前と俺は消えるが
Dialogue: 0,0:20:56.42,0:21:00.09,DefaultSingle-J,,0,0,0,,		ヤマガタルームの名で試作続行と話はついた
Dialogue: 0,0:21:01.17,0:21:02.40,DefaultSingle-J,,0,0,0,,		ありがたく思え
Dialogue: 0,0:21:02.69,0:21:03.58,DefaultSingle-J,,0,0,0,,		大バカもの
Dialogue: 0,0:21:09.46,0:21:10.76,DefaultSingle-J,,0,0,0,,		それがわかったら
Dialogue: 0,0:21:11.07,0:21:12.98,DefaultSingle-J,,0,0,0,,		きっちりお務めをすませてこい
Dialogue: 0,0:21:14.26,0:21:18.20,DefaultSingle-J,,0,0,0,,		みんながバカな貴様を待ってくれてる
Dialogue: 0,0:21:27.25,0:21:28.59,DefaultSingle-J,,0,0,0,,		お騒がせした
Dialogue: 0,0:22:54.76,0:22:55.94,DefaultSingle-J,,0,0,0,,		聞いて　お父さん
Dialogue: 0,0:22:56.33,0:22:58.27,DefaultSingle-J,,0,0,0,,		正さんの意識が戻ったの
Dialogue: 0,0:22:58.85,0:23:02.87,DefaultSingle-J,,0,0,0,,		院長さんがもう大丈夫だって心配いらないって
Dialogue: 0,0:23:03.27,0:23:04.25,DefaultSingle-J,,0,0,0,,		そうか
Dialogue: 0,0:23:04.73,0:23:06.28,DefaultSingle-J,,0,0,0,,		よかったなぁ　しのぶ
Dialogue: 0,0:23:06.80,0:23:09.07,DefaultSingle-J,,0,0,0,,		それで　犯人は見つかったの
Dialogue: 0,0:23:12.40,0:23:14.21,DefaultSingle-J,,0,0,0,,		どうしたの　お父さん
Dialogue: 0,0:23:19.66,0:23:21.23,DefaultSingle-J,,0,0,0,,		安心なさい　しのぶさん
Dialogue: 0,0:23:21.63,0:23:23.45,DefaultSingle-J,,0,0,0,,		事件は解決したよ
Dialogue: 0,0:23:24.50,0:23:27.88,DefaultSingle-J,,0,0,0,,		あんたの父さんはやはりいい奴じゃった
Dialogue: 0,0:23:33.05,0:23:35.39,DefaultSingle-J,,0,0,0,,		いつかきっとこのタロスが
Dialogue: 0,0:23:35.77,0:23:36.51,DefaultSingle-J,,0,0,0,,		そうね
Dialogue: 0,0:23:37.52,0:23:41.48,DefaultSingle-J,,0,0,0,,		巨人の全身が完成する日がくるわ　きっと
Dialogue: 1,0:23:45.47,0:23:48.03,DefaultSingle-J,,0,0,0,,		力はなくたって  金ならあるでしょ
Dialogue: 1,0:23:48.81,0:23:50.26,DefaultSingle-J,,0,0,0,,		払いますよねぇ
Dialogue: 0,0:23:51.01,0:23:54.53,DefaultSingle-J,,0,0,0,,		恐竜の骨や足跡が見つかったことはあるみたいよ
Dialogue: 0,0:23:54.92,0:23:55.93,DefaultSingle-J,,0,0,0,,		よし
Dialogue: 1,0:23:55.93,0:23:57.91,DefaultSingle-J,,0,0,0,,		アンモナイトを見つけるぞ
Dialogue: 1,0:23:58.53,0:24:01.67,DefaultSingle-J,,0,0,0,,		誰かが前もってトイレに毒を塗っておき
Dialogue: 1,0:24:01.67,0:24:06.04,DefaultSingle-J,,0,0,0,,		被害者がそれに触れるように仕向けたということになりますねぇ
Dialogue: 0,0:24:09.82,0:24:10.99,DefaultSingle-J,,0,0,0,,		Next　Conan
Dialogue: 0,0:24:11.37,0:24:13.33,DefaultSingle-J,,0,0,0,,		危ない化石採集
Dialogue: 0,0:24:30.83,0:24:33.20,DefaultSingle-J,,0,0,0,,		Next　Conan's　Hint
