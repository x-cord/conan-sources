Dialogue: 0,0:00:53.19,0:00:55.36,DefaultSingle-J,,0,0,0,,		おい　ビール　大生
Dialogue: 0,0:00:55.36,0:00:56.11,DefaultSingle-J,,0,0,0,,		はい
Dialogue: 0,0:00:56.24,0:00:59.03,DefaultSingle-J,,0,0,0,,		私はすぐ行くからお水だけでいいわ
Dialogue: 0,0:00:59.03,0:00:59.58,DefaultSingle-J,,0,0,0,,		かしこまりました
Dialogue: 0,0:00:59.58,0:01:00.24,DefaultSingle-J,,0,0,0,,		お母さん
Dialogue: 0,0:01:00.58,0:01:03.08,DefaultSingle-J,,0,0,0,,		ごめん　ホントに時間がないの
Dialogue: 0,0:01:03.50,0:01:05.67,DefaultSingle-J,,0,0,0,,		でも　明日はちゃんと行くから
Dialogue: 0,0:01:05.83,0:01:07.00,DefaultSingle-J,,0,0,0,,		やったぁ　
Dialogue: 0,0:01:07.33,0:01:09.25,DefaultSingle-J,,0,0,0,,		よかったね　コナン君
Dialogue: 0,0:01:09.84,0:01:11.00,DefaultSingle-J,,0,0,0,,		そうだね
Dialogue: 0,0:01:11.92,0:01:14.05,DefaultSingle-J,,0,0,0,,		だから　俺は関係ねえって
Dialogue: 0,0:01:15.38,0:01:17.01,DefaultSingle-J,,0,0,0,,		別に頼んじゃいねぇよ
Dialogue: 0,0:01:17.26,0:01:19.30,DefaultSingle-J,,0,0,0,,		無理しなくたっていいんだぜ
Dialogue: 0,0:01:19.72,0:01:21.06,DefaultSingle-J,,0,0,0,,		お父さん
Dialogue: 0,0:01:24.02,0:01:27.69,DefaultSingle-J,,0,0,0,,		後半のトークイベントには何とか出られると思うわ
Dialogue: 0,0:01:28.06,0:01:29.90,DefaultSingle-J,,0,0,0,,		ちゃんと間に合うように入るから
Dialogue: 0,0:01:31.69,0:01:34.94,DefaultSingle-J,,0,0,0,,		おじさんとおばさんが同じステージに上がるんだ
Dialogue: 0,0:01:35.28,0:01:37.45,DefaultSingle-J,,0,0,0,,		そう　そうなのよ
Dialogue: 0,0:01:37.45,0:01:38.74,DefaultSingle-J,,0,0,0,,		もう最高
Dialogue: 0,0:01:36.99,0:01:38.41,DefaultSingle-J,,0,0,0,,	{\a6\fscy90\fscx90}	お待たせ致しました
Dialogue: 0,0:01:38.74,0:01:40.62,DefaultSingle-J,,0,0,0,,		でしょ　お父さん
Dialogue: 0,0:01:41.66,0:01:43.91,DefaultSingle-J,,0,0,0,,		主役はあくまで俺だがな
Dialogue: 0,0:01:45.25,0:01:46.12,DefaultSingle-J,,0,0,0,,		ハイハイ
Dialogue: 0,0:01:46.37,0:01:48.29,DefaultSingle-J,,0,0,0,,		講演おめでとうございます
Dialogue: 0,0:01:53.09,0:01:54.09,DefaultSingle-J,,0,0,0,,		じゃあ　行くわね
Dialogue: 0,0:01:57.38,0:01:57.97,DefaultSingle-J,,0,0,0,,		いけない
Dialogue: 0,0:02:06.27,0:02:07.85,DefaultSingle-J,,0,0,0,,		今　誰かこっちを
Dialogue: 0,0:02:08.85,0:02:09.69,DefaultSingle-J,,0,0,0,,		ありがとう　
Dialogue: 0,0:02:10.23,0:02:10.98,DefaultSingle-J,,0,0,0,,		じゃあね
Dialogue: 0,0:02:15.69,0:02:16.53,DefaultSingle-J,,0,0,0,,		消えた　
Dialogue: 0,0:02:17.86,0:02:18.91,DefaultSingle-J,,0,0,0,,		気のせいか
Dialogue: 0,0:02:20.70,0:02:22.87,DefaultSingle-J,,0,0,0,,		今　この瞬間　闇に雷光
Dialogue: 0,0:02:22.87,0:02:24.70,DefaultSingle-J,,0,0,0,,		限界超えろ　クールな推理
Dialogue: 0,0:02:24.87,0:02:26.54,DefaultSingle-J,,0,0,0,,		ついにおっちゃん講演会
Dialogue: 0,0:02:26.54,0:02:28.50,DefaultSingle-J,,0,0,0,,		夫婦でステージ　何かが起きる
Dialogue: 0,0:02:28.83,0:02:30.38,DefaultSingle-J,,0,0,0,,		たった１つの真実見抜く
Dialogue: 0,0:02:30.38,0:02:32.92,DefaultSingle-J,,0,0,0,,		見た目は子供　頭脳は大人　その名は　
