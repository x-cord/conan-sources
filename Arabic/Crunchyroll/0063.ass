Dialogue: 0,0:00:01.08,0:00:02.91,Default,,0000,0000,0000,,عقرب دقائق مسرِع، مُذنّب ساقط
Dialogue: 0,0:00:02.91,0:00:06.61,Default,,0000,0000,0000,,تبلل الاستنتاجات المفككة للغموض \Nالقلوب التي جفّفها المجتمع الحديث
Dialogue: 0,0:00:06.61,0:00:08.71,Default,,0000,0000,0000,,ندخل اليوم عالم الأفلام المذهل
Dialogue: 0,0:00:08.71,0:00:10.83,Default,,0000,0000,0000,,تقع جريمة في ظلّ وحش
Dialogue: 0,0:00:10.83,0:00:12.82,Default,,0000,0000,0000,,يرى الحقيقة الواحدة
Dialogue: 0,0:00:12.82,0:00:15.08,Default,,0000,0000,0000,,يحمل مظهر طفل، لكنّ عقله عقل بالغ
Dialogue: 0,0:00:15.08,0:00:16.61,Default,,0000,0000,0000,,!اسمه المتحرّي كونان
Dialogue: 0,0:01:51.15,0:01:57.11,Title,,0000,0000,0000,,{\fad(300,0)}جريمة قتل الوحش العملاق غوميرا
Dialogue: 0,0:01:51.78,0:01:55.16,Default,,0000,0000,0000,,جريمة قتل الوحش العملاق غوميرا
Dialogue: 0,0:02:05.86,0:02:07.36,Default,,0000,0000,0000,,!اقطع
Dialogue: 0,0:02:08.24,0:02:10.45,Default,,0000,0000,0000,,!حسناً
Dialogue: 0,0:02:10.45,0:02:11.75,Default,,0000,0000,0000,,!رائع
Dialogue: 0,0:02:13.71,0:02:15.94,Default,,0000,0000,0000,,!إنّه غوميرا الحقيقيّ
Dialogue: 0,0:02:15.94,0:02:17.61,Default,,0000,0000,0000,,!مذهل بالفعل
Dialogue: 0,0:02:17.61,0:02:19.53,Default,,0000,0000,0000,,يبدو قويّاً جدّاً
Dialogue: 0,0:02:19.53,0:02:21.21,Default,,0000,0000,0000,,مضى وقت طويل يا آغاسا
Dialogue: 0,0:02:21.21,0:02:23.03,Default,,0000,0000,0000,,!ميكامي-كن
Dialogue: 0,0:02:23.03,0:02:26.07,Default,,0000,0000,0000,,أهم من أرادوا المشاهدة؟
Dialogue: 0,0:02:26.07,0:02:27.20,Default,,0000,0000,0000,,أجل
Dialogue: 0,0:02:27.20,0:02:28.69,Default,,0000,0000,0000,,من هذا الرجل؟
Dialogue: 0,0:02:29.11,0:02:34.07,Default,,0000,0000,0000,,إنّه المخرج ميكامي-كن، صديقي ومُبتكر غوميرا
Dialogue: 0,0:02:34.68,0:02:38.11,CharCard,,0000,0000,0005,,{\fad(300,0)}ميكامي دايسكي\Nمخرج أفلام
Dialogue: 0,0:02:35.03,0:02:36.99,On Top,,0000,0000,0000,,مرحباً بكم يا أطفال
Dialogue: 0,0:02:38.70,0:02:42.53,Default,,0000,0000,0000,,هل تريدون رؤية غوميرا عن قرب؟
Dialogue: 0,0:02:42.53,0:02:43.36,Default,,0000,0000,0000,,أيمكننا؟
Dialogue: 0,0:02:43.36,0:02:47.28,Default,,0000,0000,0000,,أجل، سنأخذ استراحة لفترة. يمكنكم خلال ذلك
Dialogue: 0,0:02:47.28,0:02:48.78,Default,,0000,0000,0000,,!رائع
Dialogue: 0,0:02:51.40,0:02:53.42,Default,,0000,0000,0000,,هذه البنايات صغيرة
Dialogue: 0,0:02:53.78,0:02:56.63,Default,,0000,0000,0000,,!انظر هناك
Dialogue: 0,0:02:58.28,0:03:00.59,Default,,0000,0000,0000,,!ظهر غوميرا مفتوح
Dialogue: 0,0:03:03.61,0:03:05.81,Default,,0000,0000,0000,,!وُلِد شخص من غوميرا
Dialogue: 0,0:03:06.11,0:03:09.02,Default,,0000,0000,0000,,إنّها مجرد بذلة، وينتجون العمل بحيث يبدو
Dialogue: 0,0:03:09.16,0:03:13.11,Default,,0000,0000,0000,,كما لو أنّ الوحش يثور في المدينة المصغّرة
Dialogue: 0,0:03:13.40,0:03:16.65,Default,,0000,0000,0000,,...هذه البنايات مصنوعه بإتقان
Dialogue: 0,0:03:16.65,0:03:18.07,Default,,0000,0000,0000,,!أنتم أيّها الأطفال
Dialogue: 0,0:03:18.49,0:03:22.91,CharCard,,0000,0000,0005,,{\fad(300,0)}أداتشي ريوتا\Nفنّي
Dialogue: 0,0:03:18.65,0:03:20.28,On Top,,0000,0000,0000,,!لا تلمسوها بأيديكم القذرة
Dialogue: 0,0:03:20.28,0:03:22.91,On Top,,0000,0000,0000,,!ستقعون في مشكلة إن أفسدتم المسرح
Dialogue: 0,0:03:23.78,0:03:27.15,Default,,0000,0000,0000,,!حضرة المخرج! تصرّف مع هؤلاء الأطفال
Dialogue: 0,0:03:27.15,0:03:28.29,Default,,0000,0000,0000,,...هوّن عليك
Dialogue: 0,0:03:28.78,0:03:31.42,On Top,,0000,0000,0000,,هل تريدون أن أعتني بهم؟
Dialogue: 0,0:03:29.63,0:03:34.25,CharCard,,0000,0000,0005,,{\fad(300,0)}ماتسوي شوغو\Nممثل غوميرا
Dialogue: 0,0:03:31.82,0:03:34.25,On Top,,0000,0000,0000,,فلا مشاهد لدينا حتّى الظهيرة
Dialogue: 0,0:03:34.82,0:03:36.45,Default,,0000,0000,0000,,شكراً يا ماتسوي-كن
Dialogue: 0,0:03:36.45,0:03:38.03,Default,,0000,0000,0000,,إنّه شخص لطيف
Dialogue: 0,0:03:38.03,0:03:40.01,Default,,0000,0000,0000,,غوميرا في جانب الأطفال
Dialogue: 0,0:03:40.53,0:03:44.97,Default,,0000,0000,0000,,يثور غوميرا بسبب البالغين السيّئين دوماً في الأصل
Dialogue: 0,0:03:45.32,0:03:47.82,On Top,,0000,0000,0000,,وإيميلا الجنّية هي من يُخمد
Dialogue: 0,0:03:46.13,0:03:50.90,CharCard,,0000,0000,0005,,{\fad(300,0)}ساكاغوتشي تومومي\Nممثلة
Dialogue: 0,0:03:47.82,0:03:51.94,On Top,,0000,0000,0000,,ثورة غوميرا يا صغار
Dialogue: 0,0:03:52.45,0:03:56.90,Default,,0000,0000,0000,,إيميلا؟ جنّية الخاتم التي تخرج\Nعندما تكون هناك مشكلة فقط؟
Dialogue: 0,0:03:56.90,0:03:58.15,Default,,0000,0000,0000,,أجل
Dialogue: 0,0:03:58.57,0:04:01.87,Default,,0000,0000,0000,,مستحيل! إيميلا صغيرة بهذا الحجم
Dialogue: 0,0:04:01.87,0:04:03.61,Default,,0000,0000,0000,,إنّها تبدو مثلها
Dialogue: 0,0:04:03.95,0:04:06.38,Default,,0000,0000,0000,,لكن أليست كبيرة السنّ نوعاً ما؟
Dialogue: 0,0:04:06.38,0:04:08.32,Default,,0000,0000,0000,,اصمت
Dialogue: 0,0:04:09.36,0:04:11.28,Default,,0000,0000,0000,,لديك طاقم جيّد
Dialogue: 0,0:04:11.28,0:04:13.62,Default,,0000,0000,0000,,أجل، كلّهم يحبّون غوميرا
Dialogue: 0,0:04:13.62,0:04:17.54,Default,,0000,0000,0000,,وهم كعائلة عملت على غوميرا لعشرة أعوام
Dialogue: 0,0:04:17.95,0:04:19.51,Default,,0000,0000,0000,,سينتهي ذلك هذا العام
Dialogue: 0,0:04:20.38,0:04:23.03,On Top,,0000,0000,0000,,أفلام الوحوش طفوليّة
Dialogue: 0,0:04:20.90,0:04:25.09,CharCard,,0000,0000,0005,,{\fad(300,0)}كامي أوسامو\Nمنتج أفلام
Dialogue: 0,0:04:23.03,0:04:25.09,On Top,,0000,0000,0000,,ولّى عصرها
Dialogue: 0,0:04:25.53,0:04:28.81,Default,,0000,0000,0000,,موسيقى مبتذلة ونهج متكرر
Dialogue: 0,0:04:29.20,0:04:31.90,Default,,0000,0000,0000,,مسرح باهظ جدّاً وتأثيرات خاصة
Dialogue: 0,0:04:31.90,0:04:35.74,Default,,0000,0000,0000,,الجنّية التي كانت في الرابعة عشر\Nعند ظهورها الأوّل أصبحت في الرابعة والعشرين
Dialogue: 0,0:04:35.74,0:04:37.52,Default,,0000,0000,0000,,وقت إسدال ستار الختام
Dialogue: 0,0:04:38.11,0:04:42.99,Default,,0000,0000,0000,,بالمناسبة، يبدو أنّ التسجيل المبدئي للفيلم قد انتهى
Dialogue: 0,0:04:42.99,0:04:45.49,Default,,0000,0000,0000,,اذهبوا لمشاهدته في غرفة العرض
Dialogue: 0,0:04:45.49,0:04:48.32,Default,,0000,0000,0000,,لن تشاهده؟
Dialogue: 0,0:04:48.32,0:04:53.54,Default,,0000,0000,0000,,كلا. ما رأيك أن ترافقيني للأكل \Nيا تومومي-كن؟ فلدينا ذاك الموضوع لمناقشته
Dialogue: 0,0:04:53.95,0:04:56.00,Default,,0000,0000,0000,,كلا، سأمتنع
Dialogue: 0,0:04:58.95,0:05:01.05,Default,,0000,0000,0000,,أيّ موضوع؟
Dialogue: 0,0:05:01.05,0:05:02.95,Default,,0000,0000,0000,,عن فيلمه التالي
Dialogue: 0,0:05:02.95,0:05:05.45,Default,,0000,0000,0000,,طلب مني لعب دور الشرطيّة البطلة
Dialogue: 0,0:05:05.45,0:05:08.93,Default,,0000,0000,0000,,كيف يلوم الناس ثمّ يطلب شيئاً كذاك؟
Dialogue: 0,0:05:09.36,0:05:12.95,Default,,0000,0000,0000,,لمَ تتذمرين؟ لديك عمل ينتظرك على الأقل
Dialogue: 0,0:05:12.95,0:05:16.02,Default,,0000,0000,0000,,نحن في العراء، صحيح يا ماتشان؟
Dialogue: 0,0:05:16.61,0:05:21.82,Default,,0000,0000,0000,,...كلا، طلب مني أن ألعب دور الشخصية الشريرة
Dialogue: 0,0:05:21.82,0:05:23.49,Default,,0000,0000,0000,,ماذا؟ أنا فحسب إذاً؟
Dialogue: 0,0:05:23.99,0:05:28.49,Default,,0000,0000,0000,,لا يهمّ، لنذهب لمشاهدة غوميرا العظيم\Nفي غرفة العرض
Dialogue: 0,0:05:28.49,0:05:30.95,Default,,0000,0000,0000,,الأطفال في رعايتك يا ماتسوي-كن إذاً
Dialogue: 0,0:05:30.95,0:05:32.91,On Top,,0000,0000,0000,,المخزن رقم 1
Dialogue: 0,0:05:32.91,0:05:35.90,Default,,0000,0000,0000,,!مذهل! انظروا لكلّ هذه الوحوش
Dialogue: 0,0:05:35.90,0:05:38.13,Default,,0000,0000,0000,,!كلّها غلبها غوميرا
Dialogue: 0,0:05:38.74,0:05:39.82,Default,,0000,0000,0000,,أنت
Dialogue: 0,0:05:42.15,0:05:45.34,Default,,0000,0000,0000,,آسف، لم أعتقد أن تتفاجئي هكذا
Dialogue: 0,0:05:45.70,0:05:47.61,Default,,0000,0000,0000,,ما تلك اليد؟
Dialogue: 0,0:05:47.61,0:05:50.53,Default,,0000,0000,0000,,إنّها يد غوميرا، نستعملها عند اللقطات المقربة
Dialogue: 0,0:05:50.53,0:05:54.32,Default,,0000,0000,0000,,يوجد وجه يُتحكّم به عن بعد أيضاً، أتريدون رؤيته؟
Dialogue: 0,0:05:54.32,0:05:55.74,Default,,0000,0000,0000,,!أجل
Dialogue: 0,0:05:55.74,0:05:57.78,Default,,0000,0000,0000,,انتظروا، سأذهب لجلبه
Dialogue: 0,0:05:57.78,0:05:58.77,Default,,0000,0000,0000,,!حسناً
Dialogue: 0,0:06:01.95,0:06:06.45,Default,,0000,0000,0000,,هل ستنتهي أفلام غوميرا حقاً؟ إنّها مسلية جداً
Dialogue: 0,0:06:06.45,0:06:09.61,Default,,0000,0000,0000,,قال أنّها تكلف الكثير من المال
Dialogue: 0,0:06:09.61,0:06:12.49,Default,,0000,0000,0000,,لا بدّ أنه مال الطعام! فغوميرا كبير الحجم
Dialogue: 0,0:06:12.78,0:06:14.70,Default,,0000,0000,0000,,يا للبسطاء
Dialogue: 0,0:06:18.56,0:06:19.33,Default,,0000,0000,0000,,!ماتسوي-سان
Dialogue: 0,0:06:21.61,0:06:23.32,Default,,0000,0000,0000,,ما حلّ بساقك؟
Dialogue: 0,0:06:23.32,0:06:24.51,Default,,0000,0000,0000,,!إ-إنّه غوميرا
Dialogue: 0,0:06:24.51,0:06:25.46,Default,,0000,0000,0000,,غوميرا؟
Dialogue: 0,0:06:25.95,0:06:29.80,Default,,0000,0000,0000,,!كان في هذه الغرفة، وطعنني بسكّين
Dialogue: 0,0:06:30.11,0:06:31.36,Default,,0000,0000,0000,,أين ذهب؟
Dialogue: 0,0:06:31.36,0:06:33.26,Default,,0000,0000,0000,,هرب من ذاك الباب
Dialogue: 0,0:06:34.32,0:06:36.35,Default,,0000,0000,0000,,!انتظروا! أيّها الأطفال
Dialogue: 0,0:06:39.81,0:06:41.36,Default,,0000,0000,0000,,ما هذا المكان؟
Dialogue: 0,0:06:41.36,0:06:42.77,Default,,0000,0000,0000,,يمكننا رؤية الاستوديو
Dialogue: 0,0:06:43.20,0:06:44.98,Default,,0000,0000,0000,,ماذا؟ يوجد شخص
Dialogue: 0,0:06:44.98,0:06:47.44,Default,,0000,0000,0000,,أليس المنتج؟
Dialogue: 0,0:06:52.28,0:06:53.12,Default,,0000,0000,0000,,ماتسوي-كن؟
Dialogue: 0,0:06:57.70,0:06:58.66,Default,,0000,0000,0000,,مهلك
Dialogue: 0,0:07:12.61,0:07:13.43,Default,,0000,0000,0000,,!كونان-كن
Dialogue: 0,0:07:14.78,0:07:15.89,Default,,0000,0000,0000,,!انتظر
Dialogue: 0,0:07:17.78,0:07:18.85,Default,,0000,0000,0000,,مات
Dialogue: 0,0:07:20.82,0:07:24.20,Default,,0000,0000,0000,,آثار أقدام؟ هرب من ذاك الباب
Dialogue: 0,0:07:24.82,0:07:25.40,Default,,0000,0000,0000,,!كونان
Dialogue: 0,0:07:28.53,0:07:30.49,Default,,0000,0000,0000,,!أنتم أيضاً
Dialogue: 0,0:07:30.95,0:07:31.95,Default,,0000,0000,0000,,أرأيتِ غوميرا؟
Dialogue: 0,0:07:31.95,0:07:34.41,Default,,0000,0000,0000,,ذاك هو، ارتطمت به للتوّ
Dialogue: 0,0:07:34.95,0:07:37.08,Default,,0000,0000,0000,,لحظة! أكان ذلك ماتسوي-سان؟
Dialogue: 0,0:07:43.28,0:07:43.83,Default,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:07:43.83,0:07:45.79,Default,,0000,0000,0000,,غوميرا ليس موجوداً
Dialogue: 0,0:07:46.15,0:07:49.92,Default,,0000,0000,0000,,مستحيل، لا مكان يختبئ فيه هنا
Dialogue: 0,0:07:50.20,0:07:52.38,Default,,0000,0000,0000,,لعلّه طار
Dialogue: 0,0:07:52.38,0:07:54.85,Default,,0000,0000,0000,,غينتا-كن، لا يستطيع غوميرا الطيران
Dialogue: 0,0:07:57.36,0:07:58.77,Default,,0000,0000,0000,,سقط على الأرض
Dialogue: 0,0:07:59.36,0:08:00.43,Default,,0000,0000,0000,,تبّاً! انتحار؟
Dialogue: 0,0:08:05.78,0:08:08.53,Default,,0000,0000,0000,,!إنّه فارغ! مستحيل
Dialogue: 0,0:08:09.11,0:08:14.53,Default,,0000,0000,0000,,اعذرني على السؤال، لكن أين كنت وقت وقوع\Nالجريمة عند الحادية عشر والنصف صباحاً؟
Dialogue: 0,0:08:14.53,0:08:17.32,Default,,0000,0000,0000,,كنتُ في الطابق الأوّل للاستوديو
Dialogue: 0,0:08:17.32,0:08:19.83,Default,,0000,0000,0000,,أقوم بالمراجعات الاستمرارية الأخيرة بمفردي
Dialogue: 0,0:08:20.28,0:08:22.61,Default,,0000,0000,0000,,لم يكن هناك من يشهد لك إذاً؟
Dialogue: 0,0:08:22.61,0:08:23.29,Default,,0000,0000,0000,,صحيح
Dialogue: 0,0:08:24.28,0:08:26.72,Default,,0000,0000,0000,,أنت تتعرّق بشدة
Dialogue: 0,0:08:26.72,0:08:29.21,Default,,0000,0000,0000,,أجل، أنا كثير العرق بطبيعتي
Dialogue: 0,0:08:29.21,0:08:32.78,Default,,0000,0000,0000,,عندما دخلت المخزن، كان القاتل موجوداً
Dialogue: 0,0:08:32.78,0:08:36.36,Default,,0000,0000,0000,,وفي بذلة غوميرا بالفعل، صحيح؟
Dialogue: 0,0:08:36.36,0:08:37.43,Default,,0000,0000,0000,,أجل
Dialogue: 0,0:08:38.90,0:08:40.61,Default,,0000,0000,0000,,أهو بخير؟
Dialogue: 0,0:08:40.61,0:08:44.35,Default,,0000,0000,0000,,أعطيته علاجاً أوليّاً، لكن يجب أخذه لمشفى
Dialogue: 0,0:08:45.95,0:08:48.82,Default,,0000,0000,0000,,يستحيل أنّه ارتكب الجريمة بحالة ساقه
Dialogue: 0,0:08:49.28,0:08:52.65,Default,,0000,0000,0000,,لمَ كنتِ هنا يا ساكاغوتشي-سان\Nعندما وقعت الجريمة؟
Dialogue: 0,0:08:53.20,0:08:59.11,Default,,0000,0000,0000,,أردتُ أن يرى المنتج كامي التسجيل المبدئي\Nلآخر أفلام غوميرا
Dialogue: 0,0:08:59.11,0:09:01.28,Default,,0000,0000,0000,,...كان مصوّراً بدقّة، لذا
Dialogue: 0,0:09:01.28,0:09:02.45,Default,,0000,0000,0000,,التسجيل المبدئي؟
Dialogue: 0,0:09:02.45,0:09:05.58,Default,,0000,0000,0000,,فيلم غير محرّر انتهى تصويره للتوّ
Dialogue: 0,0:09:06.11,0:09:08.54,Default,,0000,0000,0000,,من كان ليظن أنّ هذا سيحصل
Dialogue: 0,0:09:09.15,0:09:14.07,Default,,0000,0000,0000,,أخبريني يا تومومي-سان، رأيتِ ظهر\Nالشخص في البذلة، أليس كذلك؟
Dialogue: 0,0:09:14.72,0:09:18.68,Default,,0000,0000,0000,,...أجل، لكنّي لا أدري من كان. أسلوب ركضه مع ذلك
Dialogue: 0,0:09:19.11,0:09:20.54,Default,,0000,0000,0000,,أسلوب ركضه؟
Dialogue: 0,0:09:20.54,0:09:22.78,Default,,0000,0000,0000,,أجل، بدا أنّه يعاني من الركض
Dialogue: 0,0:09:22.78,0:09:25.45,Default,,0000,0000,0000,,كما لو أنّه ليس معتاداً على ارتدائه
Dialogue: 0,0:09:25.45,0:09:29.31,Default,,0000,0000,0000,,بالطبع، سيكون ذلك حال الجميع باستثناء ماتسوي-كن
Dialogue: 0,0:09:29.31,0:09:36.28,Default,,0000,0000,0000,,أي أنّ الجميع باستثناء ماتسوي-سان\Nوساكاغوتشي-سان والمخرج ميكامي كانوا في غرفة العرض
Dialogue: 0,0:09:36.70,0:09:39.24,Default,,0000,0000,0000,,أجل، شاهدتُ التسجيل المبدئي بدوري
Dialogue: 0,0:09:40.24,0:09:40.95,Default,,0000,0000,0000,,من أنت؟
Dialogue: 0,0:09:40.95,0:09:45.66,Default,,0000,0000,0000,,!آغاسا! المخترع العبقريّ الذي يعيش بجوار شينتشي-كن
Dialogue: 0,0:09:45.99,0:09:48.32,Default,,0000,0000,0000,,!سمعتُ بك
Dialogue: 0,0:09:48.32,0:09:50.83,Default,,0000,0000,0000,,تخترع أشياء غريبة دوماً
Dialogue: 0,0:09:53.49,0:09:54.34,Default,,0000,0000,0000,,...أنت
Dialogue: 0,0:09:54.34,0:09:55.05,Default,,0000,0000,0000,,مهلك
Dialogue: 0,0:09:55.49,0:09:58.78,Default,,0000,0000,0000,,أكان الطاقم بأسرهم في غرفة العرض حقّاً؟
Dialogue: 0,0:09:58.78,0:10:01.54,Default,,0000,0000,0000,,كانت الوحيدة التي غادرت
Dialogue: 0,0:10:01.95,0:10:05.06,Default,,0000,0000,0000,,...لحظة، كان هناك آخرٌ خرج خلسة
Dialogue: 0,0:10:05.45,0:10:06.52,Default,,0000,0000,0000,,من هو؟
Dialogue: 0,0:10:07.03,0:10:08.61,Default,,0000,0000,0000,,...أظنّه
Dialogue: 0,0:10:08.61,0:10:11.95,Default,,0000,0000,0000,,!أخبرتكم، لا أدري كيف وصل هذا الطلاء هنا
Dialogue: 0,0:10:11.95,0:10:12.98,Default,,0000,0000,0000,,!ذاك الشخص
Dialogue: 0,0:10:13.45,0:10:15.95,Default,,0000,0000,0000,,لمَ أضع طلاءً في منتصف المسرح
Dialogue: 0,0:10:15.95,0:10:18.45,Default,,0000,0000,0000,,ولدينا تصوير في الظهيرة؟
Dialogue: 0,0:10:19.03,0:10:20.91,Default,,0000,0000,0000,,أجل، خرجت
Dialogue: 0,0:10:21.28,0:10:24.62,Default,,0000,0000,0000,,انتبهتُ لشيء في المسرح عندما\Nرأيتُ التسجيل المبدئي
Dialogue: 0,0:10:25.57,0:10:28.45,Default,,0000,0000,0000,,لا تشكّون بي، صحيح؟
Dialogue: 0,0:10:28.45,0:10:31.84,Default,,0000,0000,0000,,خرج أداتشي-سان لأربع أو خمس دقائق فحسب
Dialogue: 0,0:10:32.28,0:10:35.36,Default,,0000,0000,0000,,لا يكفي ذلك لارتداء البذلة وقتل شخص
Dialogue: 0,0:10:35.36,0:10:39.30,Default,,0000,0000,0000,,ثمّ العودة لغرفة العرض بعد صعود الأدراج
Dialogue: 0,0:10:40.16,0:10:44.06,Default,,0000,0000,0000,,من وضع هذا الطلاء هنا بأيّ حال؟
Dialogue: 0,0:10:44.25,0:10:47.04,Default,,0000,0000,0000,,كان أنت
Dialogue: 0,0:10:48.33,0:10:53.28,Default,,0000,0000,0000,,تركته هناك بعد بروفة الصباح، هل نسيت؟
Dialogue: 0,0:10:56.45,0:10:59.31,Default,,0000,0000,0000,,!صحيح! نسيت تماماً
Dialogue: 0,0:10:59.31,0:11:00.00,Default,,0000,0000,0000,,...يا إلهي
Dialogue: 0,0:11:00.33,0:11:03.46,Default,,0000,0000,0000,,لمَ لم يشاهد ماتسوي-سان التسجيل المبدئي؟
Dialogue: 0,0:11:04.08,0:11:08.00,Default,,0000,0000,0000,,لا أدري، قال أنّه لم يرد المشاهدة وحسب
Dialogue: 0,0:11:08.00,0:11:12.43,Default,,0000,0000,0000,,لا تقل ذلك، فهو أحد من أرادوا ترك غوميرا
Dialogue: 0,0:11:13.41,0:11:14.59,Default,,0000,0000,0000,,ماتسوي-سان؟
Dialogue: 0,0:11:14.91,0:11:19.83,Default,,0000,0000,0000,,أجل، يبدو أنّه كان يتذمّر للمنتج كثيراً
Dialogue: 0,0:11:19.83,0:11:23.31,Default,,0000,0000,0000,,سئم من دور غوميرا وأراد تمثيل أدوار طبيعية
Dialogue: 0,0:11:27.58,0:11:31.74,Default,,0000,0000,0000,,الأمر ليس منطقياً، أين اختفى القاتل؟
Dialogue: 0,0:11:32.58,0:11:35.87,Default,,0000,0000,0000,,تبعنا آثار الأقدام عند الزاوية وصعدنا الأدراج
Dialogue: 0,0:11:35.87,0:11:39.20,Default,,0000,0000,0000,,كونان-كن، لنصنع قبراً لغوميرا
Dialogue: 0,0:11:39.66,0:11:42.54,Default,,0000,0000,0000,,ثمّ خرجنا من ذاك الباب للسطح
Dialogue: 0,0:11:42.91,0:11:45.50,Default,,0000,0000,0000,,كونان-كن! قبراً له
Dialogue: 0,0:11:45.50,0:11:48.34,Default,,0000,0000,0000,,!اصمتي! ليس هذا وقته
Dialogue: 0,0:11:48.58,0:11:51.00,Default,,0000,0000,0000,,!لا تغضب مثل غوميرا
Dialogue: 0,0:11:51.45,0:11:53.09,Default,,0000,0000,0000,,مثل غوميرا؟
Dialogue: 0,0:11:53.33,0:11:57.39,Default,,0000,0000,0000,,انظر هنا! لا أثر ذيل له على الأدراج
Dialogue: 0,0:11:57.39,0:12:00.79,Default,,0000,0000,0000,,هذا دليل على أنّ غوميرا\Nصعد الأدراج غاضباً
Dialogue: 0,0:12:00.79,0:12:03.31,Default,,0000,0000,0000,,فهو يرفع ذيله عندما يغضب
Dialogue: 0,0:12:04.00,0:12:06.27,Default,,0000,0000,0000,,...لحظة! أيمكن
Dialogue: 0,0:12:06.75,0:12:08.61,Default,,0000,0000,0000,,ا-انتظر
Dialogue: 0,0:12:08.61,0:12:10.69,Default,,0000,0000,0000,,!ما-ما الخطب يا كونان؟
Dialogue: 0,0:12:11.58,0:12:12.94,Default,,0000,0000,0000,,!انتظر
Dialogue: 0,0:12:17.54,0:12:18.62,Default,,0000,0000,0000,,ما الذي تراه؟
Dialogue: 0,0:12:18.62,0:12:19.58,Default,,0000,0000,0000,,ماذا هناك؟
Dialogue: 0,0:12:19.58,0:12:21.37,Default,,0000,0000,0000,,!كونان
Dialogue: 0,0:12:24.42,0:12:25.08,Default,,0000,0000,0000,,كونان-كن
Dialogue: 0,0:12:25.45,0:12:27.54,Default,,0000,0000,0000,,حسناً، عرفت الحيلة
Dialogue: 0,0:12:27.54,0:12:29.00,On Top,,0000,0000,0000,,الاستوديو أ
Dialogue: 0,0:12:29.20,0:12:31.97,Default,,0000,0000,0000,,!لمَ لا تسمحون لنا بالدخول؟
Dialogue: 0,0:12:31.97,0:12:35.08,Default,,0000,0000,0000,,لا يمكنكم، ليس مكاناً للهو الأطفال
Dialogue: 0,0:12:35.08,0:12:35.80,Default,,0000,0000,0000,,!من هنا
Dialogue: 0,0:12:35.80,0:12:36.84,Default,,0000,0000,0000,,أجل
Dialogue: 0,0:12:38.12,0:12:40.51,Default,,0000,0000,0000,,يوجد آخرون هنا أيضاً
Dialogue: 0,0:12:41.08,0:12:41.91,Default,,0000,0000,0000,,...صحيح
Dialogue: 0,0:12:41.91,0:12:43.48,On Top,,0000,0000,0000,,المخزن رقم 1
Dialogue: 0,0:12:48.81,0:12:49.55,Default,,0000,0000,0000,,!أنتم
Dialogue: 0,0:12:49.55,0:12:51.14,Default,,0000,0000,0000,,!نسينا شيئاً
Dialogue: 0,0:12:54.58,0:12:56.06,Default,,0000,0000,0000,,ماذا تفعلون هنا؟
Dialogue: 0,0:12:56.06,0:12:57.66,Default,,0000,0000,0000,,كونان-كن
Dialogue: 0,0:12:57.66,0:13:00.83,Default,,0000,0000,0000,,سنأخذ ماتسوي-كن للمشفى
Dialogue: 0,0:13:00.83,0:13:04.79,Default,,0000,0000,0000,,يبدو أنّه لن يستطيع أداء دور\Nغوميرا لفترة بحال ساقه
Dialogue: 0,0:13:05.45,0:13:08.66,Default,,0000,0000,0000,,انسوا غوميرا، لا يمكنه أداء\N...دور بشريّ حتى
Dialogue: 0,0:13:10.58,0:13:13.75,Default,,0000,0000,0000,,إذاً؟ أحللت القضيّة؟
Dialogue: 0,0:13:13.75,0:13:15.76,Default,,0000,0000,0000,,كلا، لم أجد الفاعل بعد
Dialogue: 0,0:13:16.41,0:13:21.05,Default,,0000,0000,0000,,لمَ هاجم ماتسوي-سان في هذا المخزن؟
Dialogue: 0,0:13:21.41,0:13:25.90,Default,,0000,0000,0000,,،ربما لأنّه أتى لأخذ السكّين \Nلكن رآه ماتسوي-سان؟
Dialogue: 0,0:13:27.87,0:13:31.79,Default,,0000,0000,0000,,أدوات الأفلام لا تقتل الناس
Dialogue: 0,0:13:34.71,0:13:38.95,Default,,0000,0000,0000,,لحظة، في هذه الحالة لا يمكن\N!أن يكون القاتل سوى ذاك الشخص
Dialogue: 0,0:13:50.04,0:13:51.53,Default,,0000,0000,0000,,ما الخطب يا شينتشي؟
Dialogue: 0,0:13:51.53,0:13:53.63,Default,,0000,0000,0000,,...لا أجد ساعتي المخدّرة
Dialogue: 0,0:13:55.66,0:13:58.76,Default,,0000,0000,0000,,...أيّها البروفسور! ما رأيك أن
Dialogue: 0,0:13:59.12,0:14:03.16,Default,,0000,0000,0000,,حضرة المفتّش، سنأخذ ماتسوي-كن للمشفى
Dialogue: 0,0:14:03.16,0:14:03.97,Default,,0000,0000,0000,,حسناً
Dialogue: 0,0:14:03.97,0:14:05.92,Default,,0000,0000,0000,,!تمهلوا
Dialogue: 0,0:14:07.08,0:14:11.06,Default,,0000,0000,0000,,!المجرم موجود في هذه الغرفة
Dialogue: 0,0:14:11.06,0:14:12.19,Default,,0000,0000,0000,,ماذا؟
Dialogue: 0,0:14:13.29,0:14:17.12,Default,,0000,0000,0000,,!حرّك شفتيك تزامناً مع ما سأقوله فحسب
Dialogue: 0,0:14:17.12,0:14:20.11,Default,,0000,0000,0000,,أين المشكلة؟ دعني أستمتع ببعض المجد بدوري
Dialogue: 0,0:14:20.37,0:14:25.62,Default,,0000,0000,0000,,إذاً يا آغاسا-سان، هلّا شرحت بما أنّك\Nتعرف هويّة المجرم
Dialogue: 0,0:14:25.62,0:14:28.08,Default,,0000,0000,0000,,كيف اختفى من السطح؟
Dialogue: 0,0:14:28.37,0:14:29.54,Default,,0000,0000,0000,,!تأثيرات خاصة
Dialogue: 0,0:14:30.46,0:14:33.58,Default,,0000,0000,0000,,تعرفون تلك الصور المجسّمة
Dialogue: 0,0:14:33.58,0:14:37.46,Default,,0000,0000,0000,,!لا بدّ أن القاتل كان كذلك طوال الوقت
Dialogue: 0,0:14:38.08,0:14:39.79,Default,,0000,0000,0000,,صحيح؟
Dialogue: 0,0:14:39.79,0:14:45.12,Default,,0000,0000,0000,,ما الذي تقوله؟! ارتطمتُ بالقاتل\N!في الرواق، ورأيته يهرب فوق ذلك
Dialogue: 0,0:14:45.12,0:14:48.50,Default,,0000,0000,0000,,...كلا، حسناً... انسوا ما قلتُه! الحقيقة
Dialogue: 0,0:14:48.50,0:14:49.63,Default,,0000,0000,0000,,!كانت حيلة
Dialogue: 0,0:14:50.45,0:14:52.56,Default,,0000,0000,0000,,وبغاية البساطة إضافةً لذلك
Dialogue: 0,0:14:52.56,0:14:55.91,Default,,0000,0000,0000,,رأت تومومي-سان والأطفال القاتل
Dialogue: 0,0:14:55.91,0:14:57.78,Default,,0000,0000,0000,,حتّى استدار في الرواق فحسب
Dialogue: 0,0:14:58.16,0:15:01.74,Default,,0000,0000,0000,,لا جزم بصعوده للجدران من عدمه بعدها
Dialogue: 0,0:15:02.08,0:15:05.62,Default,,0000,0000,0000,,لكن كانت هناك آثار أقدام على الأدراج
Dialogue: 0,0:15:05.62,0:15:07.41,Default,,0000,0000,0000,,...صـ-صحيح
Dialogue: 0,0:15:07.41,0:15:09.86,Default,,0000,0000,0000,,!طابق صوتي فحسب
Dialogue: 0,0:15:09.86,0:15:10.71,Default,,0000,0000,0000,,...حسناً
Dialogue: 0,0:15:10.71,0:15:16.17,Default,,0000,0000,0000,,وضع القاتل آثار الأقدام\N!على الأدراج سلفاً
Dialogue: 0,0:15:17.83,0:15:20.54,Default,,0000,0000,0000,,يكاد لا يذهب أحد للسطح
Dialogue: 0,0:15:20.54,0:15:24.59,Default,,0000,0000,0000,,لن يكون غريباً ألا ينتبه أحد لذاك الدرج
Dialogue: 0,0:15:25.12,0:15:30.00,Default,,0000,0000,0000,,اُستعملت أقدام غوميرا وحدها لترك الآثار غالباً
Dialogue: 0,0:15:30.00,0:15:34.56,Default,,0000,0000,0000,,،ودليل ذلك هو وجود أثر ذيل في الرواق\Nلكن ليس على الأدراج
Dialogue: 0,0:15:34.95,0:15:39.53,Default,,0000,0000,0000,,خلع القاتل البذلة سريعاً أمام الأدراج
Dialogue: 0,0:15:40.00,0:15:43.24,Default,,0000,0000,0000,,نزل في الاتّجاه المعاكس ودخل غرفةً
Dialogue: 0,0:15:43.95,0:15:48.41,Default,,0000,0000,0000,,أضرم النار في البذلة ثم رماها على الأرض
Dialogue: 0,0:15:48.41,0:15:50.41,Default,,0000,0000,0000,,
Dialogue: 0,0:15:48.86,0:15:50.41,Default,,0000,0000,0000,,!هكذا إذاً
Dialogue: 0,0:15:50.41,0:15:52.37,Default,,0000,0000,0000,,...لا شيء
Dialogue: 0,0:15:52.37,0:15:55.58,Default,,0000,0000,0000,,لكن هل سيتمكن من وضع آثار أقدام سلفاً
Dialogue: 0,0:15:55.58,0:15:59.91,Default,,0000,0000,0000,,دون معرفة ما سيكون لون الطلاء على المسرح؟
Dialogue: 0,0:15:59.91,0:16:01.70,Default,,0000,0000,0000,,صحيح يا أداتشي-سان؟
Dialogue: 0,0:16:01.70,0:16:06.55,Default,,0000,0000,0000,,أجل، صادف أن وضعتُ ذاك الطلاء قبل الحادثة فحسب
Dialogue: 0,0:16:06.83,0:16:10.22,Default,,0000,0000,0000,,كلامك متناقض
Dialogue: 0,0:16:10.50,0:16:12.91,Default,,0000,0000,0000,,هذا طبيعيّ
Dialogue: 0,0:16:12.91,0:16:18.15,Default,,0000,0000,0000,,فتومومي-سان وأداتشي-سان يكذبان\N!للتغطية على القاتل
Dialogue: 0,0:16:19.41,0:16:20.61,Default,,0000,0000,0000,,يكذبان؟
Dialogue: 0,0:16:21.25,0:16:26.37,Default,,0000,0000,0000,,كان القاتل من وضع الطلاء عند المسرح
Dialogue: 0,0:16:26.37,0:16:28.83,Default,,0000,0000,0000,,لاستعماله في حيلة آثار الأقدام
Dialogue: 0,0:16:28.83,0:16:32.04,Default,,0000,0000,0000,,!أي يعرفان هويّة القاتل؟
Dialogue: 0,0:16:32.04,0:16:36.29,Default,,0000,0000,0000,,جارى أداتشي-سان ما قالته تومومي-سان فحسب غالباً
Dialogue: 0,0:16:36.29,0:16:38.75,Default,,0000,0000,0000,,لكن يُفترض أنّها تعرف
Dialogue: 0,0:16:38.75,0:16:42.21,Default,,0000,0000,0000,,رأت القاتل عندما ارتطمت به في الرواق على الأرجح
Dialogue: 0,0:16:42.50,0:16:45.41,Default,,0000,0000,0000,,من القاتل إذاً؟
Dialogue: 0,0:16:45.41,0:16:49.01,Default,,0000,0000,0000,,،القاتل بين الذين لم يكونوا في غرفة العرض\Nالمخرج ميكامي وماتسوي-سان
Dialogue: 0,0:16:49.62,0:16:54.93,Default,,0000,0000,0000,,كما بين من غادروها في فترةٍ ما، تومومي-سان\Nوأداتشي-سان، أحد هؤلاء الأربعة
Dialogue: 0,0:16:54.93,0:16:59.25,Default,,0000,0000,0000,,،غاب أداتشي-سان لأربع أو خمس دقائق فقط\Nفلم يمتلك وقتاً كافياً
Dialogue: 0,0:16:59.25,0:17:02.90,Default,,0000,0000,0000,,رأت تومومي-سان القاتل مع الأطفال، فهي بريئة أيضاً
Dialogue: 0,0:17:02.90,0:17:06.11,Default,,0000,0000,0000,,تبقّى المخرج ميكامي وماتسوي-سان فحسب
Dialogue: 0,0:17:06.33,0:17:09.41,Default,,0000,0000,0000,,مهلك، ماتسوي-سان مصاب إصابة بليغة
Dialogue: 0,0:17:09.41,0:17:11.45,Default,,0000,0000,0000,,!وميكامي-كن صديقي العزيز
Dialogue: 0,0:17:13.16,0:17:15.54,Default,,0000,0000,0000,,...ولذا سيشكّل هذا صدمةً
Dialogue: 0,0:17:15.54,0:17:17.04,Default,,0000,0000,0000,,...أجل، القاتل هو
Dialogue: 0,0:17:17.04,0:17:18.29,Default,,0000,0000,0000,,اسمع
Dialogue: 0,0:17:18.75,0:17:21.04,Default,,0000,0000,0000,,ما الذي تفعله يا كونان-كن؟
Dialogue: 0,0:17:21.75,0:17:24.29,Default,,0000,0000,0000,,!أنتم تضايقونني! ابتعدوا
Dialogue: 0,0:17:24.29,0:17:26.01,Default,,0000,0000,0000,,نضايقك؟ نبتعد؟
Dialogue: 0,0:17:26.41,0:17:30.00,Default,,0000,0000,0000,,!كلا، مجرد ذبابات مزعجة! ابتعدوا
Dialogue: 0,0:17:30.00,0:17:31.97,Default,,0000,0000,0000,,إذاً، من هو القاتل؟
Dialogue: 0,0:17:35.33,0:17:38.75,Default,,0000,0000,0000,,!القاتل هو ماتسوي-سان، أنت
Dialogue: 0,0:17:39.95,0:17:44.65,Default,,0000,0000,0000,,أحمق! لم يكن يستطيع الهرب\N!في تلك البذلة الثقيلة بإصابته
Dialogue: 0,0:17:44.95,0:17:48.86,Default,,0000,0000,0000,,بافتراض أنّه أُصيب قبل الجريمة حقّاً
Dialogue: 0,0:17:49.29,0:17:51.32,Default,,0000,0000,0000,,...أتقصد أنّ تلك الإصابة
Dialogue: 0,0:17:51.70,0:17:55.29,Default,,0000,0000,0000,,أجل، أسقط البذلة بعد ارتكاب الجريمة
Dialogue: 0,0:17:55.54,0:17:59.25,Default,,0000,0000,0000,,ورجع للمخزن وطعن نفسه بسكّين أخرى
Dialogue: 0,0:17:59.62,0:18:01.71,Default,,0000,0000,0000,,!لخداعنا
Dialogue: 0,0:18:02.08,0:18:06.50,Default,,0000,0000,0000,,لكن رأى الأطفال إصابته قبل وقوع الجريمة
Dialogue: 0,0:18:06.50,0:18:08.75,Default,,0000,0000,0000,,كان دماً مزيّفاً غالباً
Dialogue: 0,0:18:08.75,0:18:11.64,Default,,0000,0000,0000,,هذا مسرح تصوير، ستجده بسهولة
Dialogue: 0,0:18:12.12,0:18:18.25,Default,,0000,0000,0000,,لكن الأطفال لحقوا بغوميرا للاستوديو\Nبعدما رأوا إصابته
Dialogue: 0,0:18:18.25,0:18:22.00,Default,,0000,0000,0000,,يوجد طريق واحد فقط من المخزن للاستوديو
Dialogue: 0,0:18:22.00,0:18:25.32,Default,,0000,0000,0000,,أين تجاوزهم ماتسوي-سان بالضبط؟
Dialogue: 0,0:18:25.87,0:18:30.54,Default,,0000,0000,0000,,الاستوديو بجوار باب الرواق مباشرةً
Dialogue: 0,0:18:30.54,0:18:34.78,Default,,0000,0000,0000,,دخله بعد مغادرة الأطفال غالباً
Dialogue: 0,0:18:34.78,0:18:40.16,Default,,0000,0000,0000,,ارتدى البذلة بعدها، وقتل المنتج كامي
Dialogue: 0,0:18:40.16,0:18:44.71,Default,,0000,0000,0000,,تحتاج هذه الحيلة شهوداً\Nللحاق بآثار الأقدام
Dialogue: 0,0:18:45.12,0:18:51.41,Default,,0000,0000,0000,,فهمت، لذا اختار الأطفال باعتبار أنّهم بطيئون
Dialogue: 0,0:18:51.41,0:18:56.18,Default,,0000,0000,0000,,،الأطفال كتلة من الفضول\Nأخبرهم ألّا يذهبوا وسيذهبون
Dialogue: 0,0:18:56.83,0:19:00.98,Default,,0000,0000,0000,,أحرق البذلة كي يمحو آثار العرق داخلها
Dialogue: 0,0:19:00.98,0:19:04.41,Default,,0000,0000,0000,,ما دليل أنّ ماتسوي-سان كان الفاعل؟
Dialogue: 0,0:19:04.41,0:19:10.58,Default,,0000,0000,0000,,السكّين التي استعملها لطعن نفسه\Nموجودة في صندوق معدّات التصوير في المخزن
Dialogue: 0,0:19:10.58,0:19:13.00,Default,,0000,0000,0000,,كان ذلك المكان الوحيد لإخفائها غالباً
Dialogue: 0,0:19:13.00,0:19:15.41,Default,,0000,0000,0000,,فلم يستطع المشي بعد طعن ساقه
Dialogue: 0,0:19:16.12,0:19:20.75,Default,,0000,0000,0000,,!ودليل آخر، القميص الذي يرتديه
Dialogue: 0,0:19:21.75,0:19:23.00,Default,,0000,0000,0000,,قميصه؟
Dialogue: 0,0:19:23.00,0:19:27.12,Default,,0000,0000,0000,,ركض القاتل بأقصى سرعته وهو يرتدي البذلة
Dialogue: 0,0:19:27.12,0:19:30.41,Default,,0000,0000,0000,,من الطبيعيّ أن يكون القميص مليئاً بالعرق
Dialogue: 0,0:19:30.41,0:19:33.41,Default,,0000,0000,0000,,لكن لا بقع عرق على قميصه
Dialogue: 0,0:19:33.41,0:19:36.47,Default,,0000,0000,0000,,بالطبع لا، فقد غيّره
Dialogue: 0,0:19:36.87,0:19:38.41,Default,,0000,0000,0000,,غيّره؟
Dialogue: 0,0:19:38.41,0:19:41.33,Default,,0000,0000,0000,,يمكن لكونان-كن إثبات ذلك
Dialogue: 0,0:19:41.33,0:19:43.03,Default,,0000,0000,0000,,!ها أنا
Dialogue: 0,0:19:44.62,0:19:50.48,Default,,0000,0000,0000,,أتذكر عندما سكبت أيومي-تشان\Nعصيراً على قميصك؟
Dialogue: 0,0:19:51.58,0:19:54.58,Default,,0000,0000,0000,,لكن هذا غريب، لا بقعة هنا
Dialogue: 0,0:19:54.58,0:19:56.00,Default,,0000,0000,0000,,أين غيّرت قميصك؟
Dialogue: 0,0:19:56.00,0:19:58.24,Default,,0000,0000,0000,,ظننت أنّك لم تستطع الحركة بإصابة ساقك
Dialogue: 0,0:19:58.75,0:20:02.09,Default,,0000,0000,0000,,أأنت متأكد أنّك لم تخطئ يا ولد؟
Dialogue: 0,0:20:02.83,0:20:05.75,Default,,0000,0000,0000,,لعلّ العصير سُكب على الأرض وليس القميص؟
Dialogue: 0,0:20:06.04,0:20:07.83,Default,,0000,0000,0000,,...لكنّي رأيت
Dialogue: 0,0:20:07.83,0:20:10.67,Default,,0000,0000,0000,,!أأنت متأكد حقّاً؟ تذكّر جيّداً
Dialogue: 0,0:20:11.16,0:20:13.13,Default,,0000,0000,0000,,!أرجوك يا ولد
Dialogue: 0,0:20:15.33,0:20:17.22,Default,,0000,0000,0000,,يكفي يا تومومي-تشان
Dialogue: 0,0:20:18.50,0:20:22.58,Default,,0000,0000,0000,,إنّه محق، كنتُ متعرقاً بشدّة فغيّرت قميصي
Dialogue: 0,0:20:22.58,0:20:25.24,Default,,0000,0000,0000,,وضعته داخل حقيبتي
Dialogue: 0,0:20:25.24,0:20:26.73,Default,,0000,0000,0000,,حسناً، تفقدوها فوراً
Dialogue: 0,0:20:27.16,0:20:30.25,Default,,0000,0000,0000,,لمَ؟ لمَ قتلت المنتج كامي؟
Dialogue: 0,0:20:30.25,0:20:33.00,Default,,0000,0000,0000,,ألم يعطك دوراً في فيلمه القادم؟
Dialogue: 0,0:20:33.00,0:20:39.16,Default,,0000,0000,0000,,،لم يكن ذلك في بالي منذ البداية\Nكان غوميرا كلّ ما فكرتُ به فحسب
Dialogue: 0,0:20:39.62,0:20:44.33,Default,,0000,0000,0000,,!لكن ألم تكن أكثر من أراد ترك غوميرا؟
Dialogue: 0,0:20:44.33,0:20:47.63,Default,,0000,0000,0000,,ذاك أمرٌ اختلقه المنتج كامي
Dialogue: 0,0:20:48.08,0:20:53.25,Default,,0000,0000,0000,,استغربتُ من محاولة الجميع تشجيعي بابتسامات حزينة
Dialogue: 0,0:20:53.25,0:20:57.30,Default,,0000,0000,0000,,لا أصدّق أني سمعت بأكاذيبه قبل أسبوعين فحسب
Dialogue: 0,0:20:57.75,0:21:02.25,Default,,0000,0000,0000,,ذهبتُ لمناقشته هلعاً، لكنه قال أنّه أعلن سلفاً
Dialogue: 0,0:21:02.25,0:21:08.04,Default,,0000,0000,0000,,أنّ هذا سيكون فيلم غوميرا الأخير، ولا عودة الآن
Dialogue: 0,0:21:08.04,0:21:14.53,Default,,0000,0000,0000,,!سينسى الجميع وحش المطّاط ذاك بعد سنة
Dialogue: 0,0:21:15.16,0:21:17.62,Default,,0000,0000,0000,,!لمَ لم تتكلم معنا؟
Dialogue: 0,0:21:17.62,0:21:19.41,Default,,0000,0000,0000,,لم أستطع
Dialogue: 0,0:21:19.41,0:21:23.49,Default,,0000,0000,0000,,فقد كانت رؤية الجميع يجتهدون\Nمرة أخيرة عصيبة عليّ
Dialogue: 0,0:21:24.66,0:21:30.46,Default,,0000,0000,0000,,لكن ما أنا بنادم. فلن يكون هناك \Nمشهد موت نهائيّ لغوميرا الآن
Dialogue: 0,0:21:30.46,0:21:35.58,Default,,0000,0000,0000,,أتحسّر على جعل الأطفال يرون ما رأوه فحسب
Dialogue: 0,0:21:37.91,0:21:42.89,Default,,0000,0000,0000,,أخبرينا يا تومومي-تشان، هل رأيتِ\Nماتشان في بذلة غوميرا حقّاً؟
Dialogue: 0,0:21:43.45,0:21:47.84,Default,,0000,0000,0000,,كلا، لم أرَ شيئاً. فقد اختفى سريعاً
Dialogue: 0,0:21:48.75,0:21:50.33,Default,,0000,0000,0000,,...كيف إذاً
Dialogue: 0,0:21:50.33,0:21:54.91,Default,,0000,0000,0000,,أحمق، يمكنني أن أعرف من مجرد\Nتحركاته دون الحاجة للنظر داخلاً
Dialogue: 0,0:21:54.91,0:22:00.80,Default,,0000,0000,0000,,فقد كان زميلي الذي عمل معي \Nفي العشرة أعوام الفائتة
Dialogue: 0,0:23:28.50,0:23:31.33,Default,,0000,0000,0000,,تمّ عرض غوميرا في صالات الأفلام بعدها بشهرين
Dialogue: 0,0:23:32.33,0:23:37.08,Default,,0000,0000,0000,,رُبط المشهد الأخير بكلّ الأفلام السابقة
Dialogue: 0,0:23:37.08,0:23:38.92,Default,,0000,0000,0000,,ومُحي مشهد موت غوميرا
Dialogue: 0,0:23:39.91,0:23:43.47,Default,,0000,0000,0000,,يمكن لغوميرا العيش في الشاشات الآن للأبد
Dialogue: 0,0:23:44.54,0:23:49.87,Default,,0000,0000,0000,,يحبس المتفرجون أنفاسهم عندما يرون\Nالرسوم المفعمة بالقوّة والقصة الحماسية
Dialogue: 0,0:23:49.87,0:23:54.62,Default,,0000,0000,0000,,لكن، بدت لي صرخة غوميرا مليئةً بالحزن
Dialogue: 0,0:23:54.62,0:23:58.12,Default,,0000,0000,0000,,بينما يتردّد صداها في المسرح
Dialogue: 0,0:24:02.16,0:24:05.25,Default,,0000,0000,0000,,عندما حاول تيراوكا-سان اعتقال ماتسوياما-سان
Dialogue: 0,0:24:05.25,0:24:06.95,Default,,0000,0000,0000,,أُطلق المسدّس
Dialogue: 0,0:24:07.33,0:24:09.54,Default,,0000,0000,0000,,أكانت هذه حادثة؟
Dialogue: 0,0:24:09.54,0:24:14.62,Default,,0000,0000,0000,,بالمناسبة، هناك ما أخفيناه عن الإعلام\Nبشأن حادثة الأمس
Dialogue: 0,0:24:14.62,0:24:17.50,Default,,0000,0000,0000,,وجدنا 3 بصمات مختلفة على المسدّس
Dialogue: 0,0:24:17.91,0:24:20.75,Default,,0000,0000,0000,,لمن هي البصمة الثالثة؟
Dialogue: 0,0:24:20.75,0:24:24.50,Default,,0000,0000,0000,,...إن كان مالك المسدّس هو من أشتبه به، إذاً
Dialogue: 0,0:24:25.47,0:24:31.43,On Top,,0000,0000,15,,جريمة قتل البصمة الثالثة
Dialogue: 0,0:24:25.83,0:24:27.16,Default,,0000,0000,0000,,في الحلقة القادمة من كونان
Dialogue: 0,0:24:27.16,0:24:30.16,Default,,0000,0000,0000,,جريمة قتل البصمة الثالثة
Dialogue: 0,0:24:47.04,0:24:49.52,Default,,0000,0000,0000,,تلميح الحلقة القادمة
Dialogue: 0,0:24:49.52,0:24:51.33,Default,,0000,0000,0000,,حافظة شريط فيديو
Dialogue: 0,0:24:51.72,0:24:53.51,Default,,0000,0000,0000,,!قضيّة الحلقة القادمة فريدة جدّاً
Dialogue: 0,0:24:53.51,0:24:55.51,Default,,0000,0000,0000,,!كم أتطلّع للأسبوع القادم
